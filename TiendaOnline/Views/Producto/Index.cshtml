@using TiendaOnline.Models
@model IEnumerable<TiendaOnline.Models.Producto>
@{
    ViewData["Title"] = "Productos";
    var categorias = ViewBag.Categorias as List<Categoria>;
    string busqueda = ViewBag.Busqueda;
}
@section Styles{
    <link rel="stylesheet" href="~/css/Producto/Index.css" asp-append-version="true" />
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold">
                        <i class="bi bi-box-seam-fill me-2 text-primary"></i>
                        Catálogo de Productos
                    </h2>
                    <p class="text-muted mb-0">Descubre nuestra amplia gama de componentes de PC</p>
                </div>
                <div class="d-flex gap-2">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-1"></i>Ordenar
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" data-orden="nombre">Nombre A-Z</button></li>
                            <li><button class="dropdown-item" data-orden="precio-asc">Precio: Menor a Mayor</button></li>
                            <li><button class="dropdown-item" data-orden="precio-desc">Precio: Mayor a Menor</button></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar de Filtros -->
        <div class="col-lg-3 col-md-4">
            <div class="card rounded-3 shadow-sm border-0 mb-4">
                <div class="card-header border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-funnel me-2 text-primary"></i>Filtros
                    </h5>
                </div>
                <div class="card-body p-0">
                    <!-- Búsqueda -->
                    <div class="border-bottom">
                        <div class="p-3 bg-body-tertiary fw-semibold text-secondary small border-bottom">
                            <i class="bi bi-search me-2"></i>Buscar
                        </div>
                        <div class="p-3">
                            <input type="text" id="busquedaProducto" class="form-control" placeholder="Buscar productos..." value="@busqueda">
                        </div>
                    </div>

                    <!-- Categorías -->
                    <div class="border-bottom">
                        <div class="p-3 bg-body-tertiary fw-semibold text-secondary small border-bottom">
                            <i class="bi bi-tags me-2"></i>Categorías
                        </div>
                        <div class="p-3">
                            <div role="button" class="categoria-item d-flex justify-content-between align-items-center py-2 rounded-2 mb-1 active" data-categoria="" id="item-todas">
                                <span class="small">Todas las categorías</span>
                                <span class="categoria-count">@Model.Count()</span>
                            </div>

                            <div class="accordion accordion-flush" id="accCategorias">
                                @foreach (var cat in (List<Categoria>)ViewBag.CategoriasRaiz)
                                {
                                    var tieneHijos = cat.Subcategorias != null && cat.Subcategorias.Any();
                                    var collapseId = "collapse" + cat.CategoriaId;

                                    <div class="accordion-item border-0">
                                        <div role="button" class="categoria-item d-flex justify-content-between align-items-center py-2 rounded-2 mb-1" data-categoria="@cat.CategoriaId">
                                            @if (tieneHijos)
                                            {
                                                <i class="bi bi-chevron-right me-2 small toggle-icon"
                                                   data-bs-toggle="collapse"
                                                   data-bs-target="#@collapseId"
                                                   style="cursor: pointer;"></i>
                                            }
                                            <span class="small flex-grow-1">@cat.Nombre</span>
                                        </div>

                                        @if (tieneHijos)
                                        {
                                            <div id="@collapseId" class="collapse" data-bs-parent="#accCategorias">
                                                <div class="ms-3 ps-2 border-start">
                                                    @foreach (var sub in cat.Subcategorias)
                                                    {
                                                        <div role="button" class="categoria-item d-flex justify-content-between align-items-center py-2 rounded-2 mb-1" data-categoria="@sub.CategoriaId">
                                                            <span class="small">@sub.Nombre</span>
                                                            <span class="categoria-count">@sub.Productos.Count</span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Rango de Precios -->
                    <div class="border-bottom">
                        <div class="p-3 bg-body-tertiary fw-semibold text-secondary small border-bottom">
                            <i class="bi bi-currency-dollar me-2"></i>Rango de Precio
                        </div>
                        <div class="p-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" id="precioMin" class="form-control form-control-sm" placeholder="Mín">
                                </div>
                                <div class="col-6">
                                    <input type="number" id="precioMax" class="form-control form-control-sm" placeholder="Máx">
                                </div>
                            </div>
                            <button class="btn btn-primary btn-sm w-100 mt-2" id="aplicarFiltroPrecios">
                                Aplicar
                            </button>
                        </div>
                    </div>

                    <!-- Limpiar Filtros -->
                    <div class="p-3 border-top">
                        <button class="btn btn-outline-secondary w-100" id="limpiarFiltros">
                            <i class="bi bi-arrow-clockwise me-1"></i>Limpiar Filtros
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Productos -->
        <div class="col-lg-9 col-md-8">
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb p-2 shadow-sm rounded" id="tiendaBreadcrumb">
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none" onclick="resetearFiltroCategoria()">Tienda</a></li>
                    <li class="breadcrumb-item active" id="breadcrumbActual">Todos los productos</li>
                </ol>
            </nav>
            <!-- Barra de Resultados -->
            <div class="p-3 rounded-3 border mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="resultados-texto">
                        Mostrando <span id="productosVisibles">@Model.Count()</span> de <span id="totalProductos">@Model.Count()</span> productos
                    </span>
                    <div class="vista-controles">
                        <button class="btn btn-sm btn-outline-secondary active" data-vista="grid">
                            <i class="bi bi-grid-3x3-gap"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" data-vista="list">
                            <i class="bi bi-list"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Grid de Productos -->
            <div id="productosContainer" class="productos-grid">
                @foreach (var producto in Model)
                {
                    <a asp-controller="Producto" 
                        asp-action="Detalles" 
                        asp-route-id="@producto.ProductoId"
                        class="text-decoration-none producto-link"
                        data-categoria="@producto.CategoriaId"
                        data-categoria-padre="@producto.Categoria?.CategoriaPadreId"
                        data-precio="@producto.Precio"
                        data-nombre="@producto.Nombre.ToLower()"
                        data-stock="@(producto.Stock > 0 ? "true" : "false")"
                        title="Ver detalles">
                        <div class="producto-card">
                            <div class="card h-100 shadow-sm border-0">
                                <!-- Imagen del Producto -->
                                <div class="position-relative overflow-hidden bg-body-tertiary producto-imagen">
                                    @if (producto.Stock <= 0)
                                    {
                                        <div class="position-absolute top-0 start-0 m-3 px-3 py-1 bg-danger text-white rounded-pill small fw-lighter z-1">Agotado</div>
                                    }
                                    else if (producto.Stock <= 5)
                                    {
                                        <div class="position-absolute top-0 start-0 m-3 px-3 py-1 bg-warning text-white rounded-pill small fw-bold z-1">Últimas unidades</div>
                                    }
                                    <img src="@(producto.ImagenUrl != null ? producto.ImagenUrl : "/img/placeholder.svg?height=250&width=250")"
                                         class="card-img-top"
                                         alt="@producto.Nombre"
                                         loading="lazy" />
                                </div>

                                <!-- Información del Producto -->
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-2">
                                        @if (producto.Categoria != null)
                                        {
                                            <span class="bg-body-secondary border fw-semibold px-2 py-1 rounded-pill small">@producto.Categoria.Nombre</span>
                                        }
                                    </div>

                                    <h6 class="producto-titulo fw-semibold mb-2 lh-sm overflow-hidden">@producto.Nombre</h6>

                                    <p class="producto-descripcion text-secondary small mb-3 overflow-hidden">@producto.Descripcion</p>

                                    <!-- Stock -->
                                    <div class="producto-stock mb-2">
                                        @if (producto.Stock > 0)
                                        {
                                            <small class="text-success">
                                                <i class="bi bi-check-circle me-1"></i>
                                                @producto.Stock unidades disponibles
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-danger">
                                                <i class="bi bi-x-circle me-1"></i>
                                                Sin stock
                                            </small>
                                        }
                                    </div>

                                    <!-- Precio -->
                                    <div class="border-top pt-3 mt-auto">
                                        <span class="fs-4 fw-bold">$@producto.Precio.ToString("N0")</span>
                                    </div>

                                    <!-- Botones de Acción -->
                                    <div class="d-flex gap-2 mt-3">
                                        @if (producto.Stock > 0)
                                        {
                                            <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@producto.ProductoId" />
                                                <button type="submit" class="btn btn-primary flex-fill me-2 agregar-carrito">
                                                    <i class="bi bi-bag-plus me-1"></i>Agregar
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline-secondary flex-fill me-2" disabled>
                                                <i class="bi bi-x-circle me-1"></i>Agotado
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <!-- Mensaje cuando no hay productos -->
            <div id="noProductos" class="text-center py-5" style="display: none;">
                <div class="mb-3">
                    <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                </div>
                <h5 class="text-muted">No se encontraron productos</h5>
                <p class="text-muted">Intenta ajustar los filtros o buscar con otros términos</p>
                <button class="btn btn-primary" id="limpiarBusqueda">
                    <i class="bi bi-arrow-clockwise me-1"></i>Limpiar Filtros
                </button>
            </div>

            <!-- Paginación -->
            <nav aria-label="Paginación de productos" class="mt-4">
                <ul class="pagination justify-content-center" id="paginacion">
                    <!-- La paginación será generada por JavaScript -->
                </ul>
            </nav>
        </div>
    </div>
</div>
<script src="~/js/Producto/Index.js" asp-append-version="true"></script>