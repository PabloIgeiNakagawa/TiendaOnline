@model TiendaOnline.Domain.Entities.Producto
@{
    ViewData["Title"] = Model.Nombre;
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="my-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Inicio</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Producto" asp-action="Index" class="text-decoration-none">Productos</a>
        </li>
        @if (Model.Categoria != null)
        {
            <li class="breadcrumb-item">
                <a asp-controller="Categoria" asp-action="Productos" asp-route-id="@Model.CategoriaId" class="text-decoration-none">@Model.Categoria.Nombre</a>
            </li>
        }
        <li class="breadcrumb-item active" aria-current="page">@Model.Nombre</li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-lg-6 col-md-6 mb-4">
            <img src="@(Model.ImagenUrl != null ? Model.ImagenUrl : Url.Content("~/img/placeholder.svg?height=500&width=500"))"
                 class="img-fluid producto-imagen-principal"
                 alt="@Model.Nombre"
                 id="imagenPrincipal" />
        </div>

        <!-- Información del Producto -->
        <div class="col-lg-6 col-md-6">
            <div>
                <!-- Categoría -->
                @if (Model.Categoria != null)
                {
                    <div class="producto-categoria-detalle mb-3">
                        <span class="bg-body-secondary border fw-semibold px-2 py-1 rounded-pill small">
                            <i class="bi bi-tag"></i> @Model.Categoria.Nombre
                        </span>
                    </div>
                }

                <!-- Título -->
                <h1 class="mb-3">@Model.Nombre</h1>

                <!-- Descripción -->
                <div class="mb-4">
                    <p class="lead">@Model.Descripcion</p>
                </div>

                <!-- Precio -->
                <div class="mb-4">
                    <div>
                        <span class="fs-2 fw-bold">@Model.Precio.ToString("C", new System.Globalization.CultureInfo("es-AR"))</span>
                        <small class="fs-2">ARS</small>
                    </div>
                </div>

                <!-- Stock -->
                <div class="mb-4">
                    <div class="stock-info">
                        @if (Model.Stock > 0)
                        {
                            <div>
                                <i class="bi bi-check-circle-fill text-success"></i>
                                <span class="stock-texto">
                                    <strong>@Model.Stock</strong> unidades disponibles
                                </span>
                                @if (Model.Stock <= 5)
                                {
                                    <span class="badge bg-warning text-dark ms-2">¡Pocas unidades!</span>
                                }
                            </div>
                        }
                        else
                        {
                            <div>
                                <i class="bi bi-x-circle-fill text-danger"></i>
                                <span class="text-danger">
                                    <strong>Sin stock disponible</strong>
                                </span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Formulario para agregar al carrito -->
                @if (Model.Stock > 0)
                {
                    <form asp-action="Agregar" asp-controller="Carrito" method="post" class="producto-acciones-detalle">

                        <input type="hidden" name="id" value="@Model.ProductoId" />

                        <div class="row g-3">
                            <div class="col-md-8">
                                <div class="mt-4 d-grid gap-2 d-md-flex">
                                    <button type="submit" class="btn btn-primary btn-lg flex-fill">
                                        <i class="bi bi-cart-plus me-2"></i>Agregar al Carrito
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div>
                        <div class="d-grid">
                            <button class="btn btn-outline-secondary btn-lg" disabled>
                                <i class="bi bi-x-circle me-2"></i>Producto Agotado
                            </button>
                        </div>
                    </div>
                }

                <!-- Información adicional -->
                <div class="mt-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 mb-md-0">
                                <i class="bi bi-truck text-primary"></i>
                                <div>
                                    <strong>Envío gratis</strong>
                                    <small class="d-block text-muted">En compras superiores a $50.000</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div>
                                <i class="bi bi-arrow-clockwise text-primary"></i>
                                <div>
                                    <strong>Devoluciones</strong>
                                    <small class="d-block text-muted">30 días para cambios</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones de navegación -->
                <div class="my-4">
                    <a asp-controller="Producto" asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver a productos</a>
                    @if(User.IsInRole("Administrador"))
                    {
                        <a asp-controller="Producto" asp-action="EditarProducto" asp-route-id="@Model.ProductoId" class="btn btn-outline-primary ms-2">Editar producto</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>