@model TiendaOnline.Models.Producto
@{
    ViewData["Title"] = "Agregar Producto";
}

<link rel="stylesheet" href="~/css/Producto/AgregarProducto.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                    <i class="bi bi-house-door"></i> Inicio
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Producto")" class="text-decoration-none">Productos</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Agregar Producto</li>
        </ol>
    </nav>

    <div class="form-container">
        <!-- Header -->
        <div class="form-header">
            <h2 class="mb-2">
                <i class="bi bi-plus-circle me-2"></i>
                Agregar Nuevo Producto
            </h2>
            <p class="mb-0 opacity-75">Complete la información del producto</p>
        </div>

        <!-- Formulario -->
        <div class="form-body">
            <form asp-action="AgregarProducto" method="post" enctype="multipart/form-data" id="formProducto" novalidate>
                @Html.AntiForgeryToken()

                <!-- Información básica -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            Información Básica
                        </h5>
                    </div>
                </div>

                <div class="form-group-row">
                    <!-- Nombre -->
                    <div class="form-floating">
                        <input asp-for="Nombre"
                               class="form-control"
                               id="nombre"
                               placeholder="Nombre del producto"
                               maxlength="50"
                               required />
                        <label for="nombre">
                            <i class="bi bi-box me-1"></i>Nombre del Producto
                        </label>
                        <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                        <div class="form-text">
                            <span id="nombreContador">0</span>/50 caracteres
                        </div>
                    </div>

                    <!-- Categoría -->
                    <div class="form-floating">
                        <select asp-for="CategoriaId"
                                asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nombre"))"
                                class="form-select"
                                id="categoria"
                                required>
                            <option value="">Seleccione una categoría</option>
                        </select>
                        <label for="categoria">
                            <i class="bi bi-tag me-1"></i>Categoría
                        </label>
                        <span asp-validation-for="CategoriaId" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="form-floating mb-4">
                    <textarea asp-for="Descripcion"
                              class="form-control"
                              id="descripcion"
                              placeholder="Descripción del producto"
                              style="height: 120px"
                              maxlength="150"
                              required></textarea>
                    <label for="descripcion">
                        <i class="bi bi-card-text me-1"></i>Descripción
                    </label>
                    <span asp-validation-for="Descripcion" class="invalid-feedback"></span>
                    <div class="form-text">
                        <span id="descripcionContador">0</span>/150 caracteres
                    </div>
                </div>

                <!-- Precio y Stock -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-currency-dollar me-2"></i>
                            Precio y Inventario
                        </h5>
                    </div>
                </div>

                <div class="form-group-row">
                    <!-- Precio -->
                    <div class="form-floating">
                        <input asp-for="Precio"
                               type="number"
                               step="0.01"
                               min="0"
                               class="form-control"
                               id="precio"
                               placeholder="0.00"
                               required />
                        <label for="precio">
                            <i class="bi bi-currency-dollar me-1"></i>Precio (COP)
                        </label>
                        <span asp-validation-for="Precio" class="invalid-feedback"></span>
                        <div class="form-text">
                            Precio en pesos colombianos
                        </div>
                    </div>

                    <!-- Stock -->
                    <div class="form-floating">
                        <input asp-for="Stock"
                               type="number"
                               min="0"
                               class="form-control"
                               id="stock"
                               placeholder="0"
                               required />
                        <label for="stock">
                            <i class="bi bi-boxes me-1"></i>Stock Inicial
                        </label>
                        <span asp-validation-for="Stock" class="invalid-feedback"></span>
                        <div class="form-text">
                            Cantidad disponible en inventario
                        </div>
                    </div>
                </div>

                <!-- Imagen -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-image me-2"></i>
                            Imagen del Producto
                        </h5>
                    </div>
                </div>

                <div class="image-upload-container" onclick="document.getElementById('imagenArchivo').click()">
                    <input type="file"
                           name="ImagenArchivo"
                           id="imagenArchivo"
                           class="d-none"
                           accept="image/*"
                           required />

                    <div id="uploadPlaceholder">
                        <i class="bi bi-cloud-upload upload-icon"></i>
                        <h6>Haga clic para seleccionar una imagen</h6>
                        <p class="text-muted mb-0">o arrastre y suelte aquí</p>
                        <small class="text-muted">PNG, JPG, JPEG hasta 5MB</small>
                    </div>

                    <img id="imagePreview" class="image-preview" alt="Vista previa" />

                    <div id="fileInfo" class="file-info">
                        <i class="bi bi-file-image me-2"></i>
                        <span id="fileName"></span>
                        <button type="button" class="btn btn-sm btn-outline-danger ms-2" onclick="removeImage(event)">
                            <i class="bi bi-x"></i>
                        </button>
                    </div>
                </div>

                <div class="progress-container">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="d-flex gap-3 justify-content-end">
                            <a href="@Url.Action("Index", "Producto")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-submit" id="btnSubmit">
                                <span class="btn-text">
                                    <i class="bi bi-plus-circle me-2"></i>Agregar Producto
                                </span>
                                <span class="loading-spinner">
                                    <i class="bi bi-arrow-repeat spin me-2"></i>Guardando...
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/Producto/AgregarProducto.js" asp-append-version="true"></script>