@model IEnumerable<TiendaOnline.Models.Pedido>
@{
    ViewData["Title"] = "Gestión de Pedidos";
    var esAdmin = User.IsInRole("Administrador");
}

<link rel="stylesheet" href="~/css/Admin/Pedidos.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Sección de Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-receipt me-2 text-primary"></i>
                        Gestión de Pedidos
                    </h2>
                    <p class="text-muted mb-0">Administra todos los pedidos del sistema</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" onclick="exportarACSV()">
                        <i class="bi bi-download me-2"></i>Exportar
                    </button>
                    <button class="btn btn-primary" onclick="actualizarPedidos()">
                        <i class="bi bi-arrow-clockwise me-2"></i>Actualizar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Rápidas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stats-card stats-pendiente">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon">
                            <i class="bi bi-clock"></i>
                        </div>
                        <div>
                            <h5 class="mb-0" id="statsPendientes">@Model.Count(p => p.Estado == EstadoPedido.Pendiente)</h5>
                            <small>Pendientes</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card stats-enviado">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon">
                            <i class="bi bi-truck"></i>
                        </div>
                        <div>
                            <h5 class="mb-0" id="statsEnviados">@Model.Count(p => p.Estado == EstadoPedido.Enviado)</h5>
                            <small>Enviados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card stats-entregado">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div>
                            <h5 class="mb-0" id="statsEntregados">@Model.Count(p => p.Estado == EstadoPedido.Entregado)</h5>
                            <small>Entregados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stats-card stats-cancelado">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stats-icon">
                            <i class="bi bi-x-circle"></i>
                        </div>
                        <div>
                            <h5 class="mb-0" id="statsCancelados">@Model.Count(p => p.Estado == EstadoPedido.Cancelado)</h5>
                            <small>Cancelados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="campoBusqueda" class="form-label fw-semibold">
                                <i class="bi bi-search me-1"></i>Buscar
                            </label>
                            <input type="text" id="campoBusqueda" class="form-control" placeholder="ID pedido o cliente...">
                        </div>
                        <div class="col-md-2">
                            <label for="filtroEstado" class="form-label fw-semibold">
                                <i class="bi bi-funnel me-1"></i>Estado
                            </label>
                            <select id="filtroEstado" class="form-select">
                                <option value="">Todos</option>
                                <option value="0">Pendiente</option>
                                <option value="1">Enviado</option>
                                <option value="2">Entregado</option>
                                <option value="3">Cancelado</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="filtroFecha" class="form-label fw-semibold">
                                <i class="bi bi-calendar me-1"></i>Período
                            </label>
                            <select id="filtroFecha" class="form-select">
                                <option value="">Todas las fechas</option>
                                <option value="hoy">Hoy</option>
                                <option value="ayer">Ayer</option>
                                <option value="semana">Esta semana</option>
                                <option value="mes">Este mes</option>
                                <option value="trimestre">Este trimestre</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="filtroMonto" class="form-label fw-semibold">
                                <i class="bi bi-currency-dollar me-1"></i>Monto
                            </label>
                            <select id="filtroMonto" class="form-select">
                                <option value="">Todos</option>
                                <option value="bajo">Menos de $50.000</option>
                                <option value="medio">$50.000 - $200.000</option>
                                <option value="alto">Más de $200.000</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end gap-2">
                            <button type="button" id="limpiarFiltros" class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                            </button>
                            <button type="button" id="filtrosAvanzados" class="btn btn-outline-info">
                                <i class="bi bi-sliders"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Pedidos -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">
                            <span id="totalPedidos">@Model.Count()</span> pedidos encontrados
                        </h5>
                        <div class="d-flex gap-2 align-items-center">
                            <small class="text-muted">
                                Total: <span id="montoTotal" class="fw-bold">@Model.Sum(p => p.DetallesPedido?.Sum(d => d.PrecioUnitario * d.Cantidad) ?? 0).ToString("C0")</span>
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaPedidos">
                            <thead class="table-light">
                                <tr>
                                    <th class="ordenable border-0 py-3" data-columna="0">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-hash me-2 text-primary"></i>
                                            ID Pedido
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="1">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-person me-2 text-primary"></i>
                                            Cliente
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="2">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-calendar me-2 text-primary"></i>
                                            Fecha Pedido
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="3">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-truck me-2 text-primary"></i>
                                            Fecha Entrega
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="4">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-currency-dollar me-2 text-primary"></i>
                                            Total
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="5">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-flag me-2 text-primary"></i>
                                            Estado
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pedido in Model)
                                {
                                    var total = pedido.DetallesPedido?.Sum(d => d.PrecioUnitario * d.Cantidad) ?? 0;
                                    <tr class="fila-pedido"
                                        data-id="@pedido.PedidoId"
                                        data-cliente="@(pedido.Usuario?.Nombre?.ToLower() ?? "")"
                                        data-estado="@((int)pedido.Estado)"
                                        data-fecha="@pedido.FechaPedido.ToString("yyyy-MM-dd")"
                                        data-total="@total">
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="pedido-id-badge me-3">
                                                    #@pedido.PedidoId.ToString("D6")
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div class="cliente-info">
                                                <div class="fw-semibold text-dark">@(pedido.Usuario == null ? "Cliente no disponible" : pedido.Usuario.Nombre + " " + pedido.Usuario.Apellido)</div>
                                                <small class="text-muted">@(pedido.Usuario?.Email ?? "")</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div class="fecha-info">
                                                <div class="fw-semibold">@pedido.FechaPedido.ToString("dd/MM/yyyy")</div>
                                                <small class="text-muted">@pedido.FechaPedido.ToString("HH:mm")</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            @if (pedido.FechaEntrega.HasValue)
                                            {
                                                <div class="fecha-info">
                                                    <div class="fw-semibold">@pedido.FechaEntrega.Value.ToString("dd/MM/yyyy")</div>
                                                    <small class="text-muted">@pedido.FechaEntrega.Value.ToString("HH:mm")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Sin fecha</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="total-pedido">@total.ToString("C0")</div>
                                        </td>
                                        <td class="py-3">
                                            @switch (pedido.Estado)
                                            {
                                                case EstadoPedido.Pendiente:
                                                    <span class="badge estado-pendiente">
                                                        <i class="bi bi-clock me-1"></i>Pendiente
                                                    </span>
                                                    break;
                                                case EstadoPedido.Enviado:
                                                    <span class="badge estado-enviado">
                                                        <i class="bi bi-truck me-1"></i>Enviado
                                                    </span>
                                                    break;
                                                case EstadoPedido.Entregado:
                                                    <span class="badge estado-entregado">
                                                        <i class="bi bi-check-circle me-1"></i>Entregado
                                                    </span>
                                                    break;
                                                case EstadoPedido.Cancelado:
                                                    <span class="badge estado-cancelado">
                                                        <i class="bi bi-x-circle me-1"></i>Cancelado
                                                    </span>
                                                    break;
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <a href="@Url.Action("Detalles", "Pedido", new { id = pedido.PedidoId })"
                                                   class="btn btn-outline-info btn-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver detalle">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (pedido.Estado == EstadoPedido.Pendiente && esAdmin)
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm"
                                                            onclick="cambiarEstado(@pedido.PedidoId, 1, 'Enviado')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Marcar como enviado">
                                                        <i class="bi bi-truck"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                                            onclick="cambiarEstado(@pedido.PedidoId, 3, 'Cancelado')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Cancelar pedido">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                }
                                                else if (pedido.Estado == EstadoPedido.Enviado)
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm"
                                                            onclick="cambiarEstado(@pedido.PedidoId, 2, 'Entregado')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Marcar como entregado">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Paginación de pedidos">
                <ul class="pagination justify-content-center" id="paginacion">
                    <!-- La paginación será generada por JavaScript -->
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal de Cambio de Estado -->
<div class="modal fade" id="modalCambioEstado" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Cambiar Estado del Pedido</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="text-center py-3">
                    <div class="mb-3">
                        <i id="iconoEstado" class="display-4"></i>
                    </div>
                    <p id="mensajeCambioEstado" class="mb-0 fs-6"></p>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="botonConfirmarEstado" class="btn">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Formularios Ocultos -->
<div style="display: none;">
    @foreach (var pedido in Model)
    {
        <form id="formularioCambioEstado@(pedido.PedidoId)" asp-controller="Pedido" asp-action="CambiarEstado" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
            <input type="hidden" name="nuevoEstado" id="nuevoEstado@(pedido.PedidoId)" />
        </form>
    }
</div>

<script src="~/js/Admin/Pedidos.js" asp-append-version="true"></script>
