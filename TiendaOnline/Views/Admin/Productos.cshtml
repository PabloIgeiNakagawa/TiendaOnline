@model IEnumerable<TiendaOnline.Models.Producto>
@{
    ViewData["Title"] = "Gestión de Productos";
    var categorias = ViewBag.Categorias as List<TiendaOnline.Models.Categoria>;
}

<link rel="stylesheet" href="~/css/Admin/Productos.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Sección de Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-box-seam me-2 text-primary"></i>
                        Gestión de Productos
                    </h2>
                    <p class="text-muted mb-0">Administra los productos del sistema</p>
                </div>
                    <a asp-controller="Producto" asp-action="AgregarProducto" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nuevo Producto
                    </a>
                </div>
            </div>
        </div>

    <!-- Filtros y Búsqueda -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="campoBusqueda" class="form-label fw-semibold">
                                <i class="bi bi-search me-1"></i>Buscar
                            </label>
                            <input type="text" id="campoBusqueda" class="form-control" placeholder="Buscar por nombre o descripción...">
                        </div>
                        <div class="col-md-2">
                            <label for="filtroCategoria" class="form-label fw-semibold">
                                <i class="bi bi-funnel me-1"></i>Categoría
                            </label>
                            <select id="filtroCategoria" class="form-select">
                                <option value="">Todas</option>
                                @if (categorias != null)
                                {
                                    @foreach (var categoria in categorias)
                                    {
                                        <option value="@categoria.CategoriaId">@categoria.Nombre</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="filtroStock" class="form-label fw-semibold">
                                <i class="bi bi-boxes me-1"></i>Stock
                            </label>
                            <select id="filtroStock" class="form-select">
                                <option value="">Todos</option>
                                <option value="disponible">Con stock</option>
                                <option value="agotado">Sin stock</option>
                                <option value="bajo">Stock bajo (≤5)</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="filtroEstado" class="form-label fw-semibold">
                                <i class="bi bi-toggle-on me-1"></i>Estado
                            </label>
                            <select id="filtroEstado" class="form-select">
                                <option value="">Todos</option>
                                <option value="activo">Activos</option>
                                <option value="inactivo">Inactivos</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end gap-2">
                            <button type="button" id="limpiarFiltros" class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                            </button>
                            <button class="btn btn-outline-primary" onclick="exportarACSV()">
                                <i class="bi bi-download"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Productos -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">
                            <span id="totalProductos">@Model.Count()</span> productos encontrados
                        </h5>
                        <div class="d-flex gap-2">
                            <small class="text-muted">
                                <i class="bi bi-circle-fill text-success me-1" style="font-size: 0.5rem;"></i>
                                Activos: <span id="contadorActivos">@Model.Count(p => p.Activo)</span>
                                <i class="bi bi-circle-fill text-danger me-1 ms-3" style="font-size: 0.5rem;"></i>
                                Inactivos: <span id="contadorInactivos">@Model.Count(p => !p.Activo)</span>
                            </small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaProductos">
                            <thead class="table-light">
                                <tr>
                                    <th class="ordenable border-0 py-3" data-columna="0">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-box me-2 text-primary"></i>
                                            Producto
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="1">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-tag me-2 text-primary"></i>
                                            Categoría
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="2">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-currency-dollar me-2 text-primary"></i>
                                            Precio
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="3">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-boxes me-2 text-primary"></i>
                                            Stock
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="4">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-toggle-on me-2 text-primary"></i>
                                            Estado
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var producto in Model)
                                {
                                    <tr class="fila-producto @(producto.Activo ? "" : "table-secondary")"
                                        data-nombre="@producto.Nombre.ToLower()"
                                        data-descripcion="@producto.Descripcion.ToLower()"
                                        data-categoria="@producto.CategoriaId"
                                        data-stock="@(producto.Stock > 0 ? (producto.Stock <= 5 ? "bajo" : "disponible") : "agotado")"
                                        data-estado="@(producto.Activo ? "activo" : "inactivo")"
                                        data-precio="@producto.Precio">
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="producto-imagen-mini me-3">
                                                    @if (producto.ImagenUrl != null)
                                                    {
                                                        <img src=@producto.ImagenUrl
                                                             alt="@producto.Nombre" class="img-thumbnail @(producto.Activo ? "" : "opacity-50")" style="width: 50px; height: 50px; object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="circulo-avatar @(producto.Activo ? "" : "opacity-50")">
                                                            @producto.Nombre.Substring(0, 1).ToUpper()
                                                        </div>
                                                    }
                                                </div>
                                                <div>
                                                    <div class="fw-semibold @(producto.Activo ? "text-dark" : "text-muted")">@producto.Nombre</div>
                                                    <small class="text-muted">@producto.Descripcion</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div class="text-dark">
                                                @if (producto.Categoria != null)
                                                {
                                                    <span class="badge bg-light text-dark border">@producto.Categoria.Nombre</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin categoría</span>
                                                }
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div class="@(producto.Activo ? "text-dark" : "text-muted") fw-semibold">@producto.Precio.ToString("C", new System.Globalization.CultureInfo("es-CO"))</div>
                                        </td>
                                        <td class="py-3">
                                            @if (producto.Stock > 0)
                                            {
                                                if (producto.Stock <= 5)
                                                {
                                                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                                                        <i class="bi bi-exclamation-triangle me-1"></i>@producto.Stock unidades
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success px-3 py-2 rounded-pill">
                                                        <i class="bi bi-check-circle me-1"></i>@producto.Stock unidades
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger px-3 py-2 rounded-pill">
                                                    <i class="bi bi-x-circle me-1"></i>Agotado
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            @if (producto.Activo)
                                            {
                                                <span class="badge bg-success px-3 py-2 rounded-pill">
                                                    <i class="bi bi-check-circle me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger px-3 py-2 rounded-pill">
                                                    <i class="bi bi-x-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                @if (producto.Activo)
                                                {
                                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                                            onclick="confirmarAccion('@producto.ProductoId', 'baja', '@producto.Nombre')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Dar de baja">
                                                        <i class="bi bi-toggle-off"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm"
                                                            onclick="confirmarAccion('@producto.ProductoId', 'alta', '@producto.Nombre')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Dar de alta">
                                                        <i class="bi bi-toggle-on"></i>
                                                    </button>
                                                }
                                                <a asp-controller="Producto" asp-action="EditarProducto" asp-route-id="@producto.ProductoId"
                                                   class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar producto">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-controller="Producto" asp-action="Detalles" asp-route-id="@producto.ProductoId"
                                                   class="btn btn-outline-info btn-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver detalle">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Paginación de productos">
                <ul class="pagination justify-content-center" id="paginacion">
                    <!-- La paginación será generada por JavaScript -->
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="etiquetaModalConfirmacion" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="etiquetaModalConfirmacion">Confirmar Acción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="text-center py-3">
                    <div class="mb-3">
                        <i id="iconoConfirmacion" class="display-4"></i>
                    </div>
                    <p id="mensajeConfirmacion" class="mb-0 fs-6"></p>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="botonConfirmar" class="btn">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Formularios Ocultos -->
<div style="display: none;">
    @foreach (var producto in Model)
    {
        <form id="formularioBaja@(producto.ProductoId)" asp-controller="Producto" asp-action="DarBajaProducto" asp-route-id="@producto.ProductoId" method="post">
            @Html.AntiForgeryToken()
        </form>
        <form id="formularioAlta@(producto.ProductoId)" asp-controller="Producto" asp-action="DarAltaProducto" asp-route-id="@producto.ProductoId" method="post">
            @Html.AntiForgeryToken()
        </form>
    }
</div>

<script src="~/js/Admin/Productos.js" asp-append-version="true"></script>
