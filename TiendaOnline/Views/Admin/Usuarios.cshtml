@model IEnumerable<TiendaOnline.Models.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<link rel="stylesheet" href="~/css/Admin/Usuarios.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Sección de Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-people-fill me-2 text-primary"></i>
                        Gestión de Usuarios
                    </h2>
                    <p class="text-muted mb-0">Administra los usuarios del sistema</p>
                </div>
                <a asp-controller="Usuario" asp-action="Register" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-person-plus me-2"></i>
                    Nuevo Usuario
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="campoBusqueda" class="form-label fw-semibold">
                                <i class="bi bi-search me-1"></i>Buscar
                            </label>
                            <input type="text" id="campoBusqueda" class="form-control" placeholder="Buscar por nombre o email...">
                        </div>
                        <div class="col-md-3">
                            <label for="filtroRol" class="form-label fw-semibold">
                                <i class="bi bi-funnel me-1"></i>Filtrar por Rol
                            </label>
                            <select id="filtroRol" class="form-select">
                                <option value="">Todos los roles</option>
                                @foreach (var rol in Html.GetEnumSelectList<TiendaOnline.Models.Rol>())
                                {
                                    <option value="@rol.Text">@rol.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filtroEstado" class="form-label fw-semibold">
                                <i class="bi bi-toggle-on me-1"></i>Estado
                            </label>
                            <select id="filtroEstado" class="form-select">
                                <option value="">Todos</option>
                                <option value="activo">Activos</option>
                                <option value="inactivo">Inactivos</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" id="limpiarFiltros" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Usuarios -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">
                            <span id="totalUsuarios">@Model.Count()</span> usuarios encontrados
                        </h5>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary btn-sm" onclick="exportarACSV()">
                                <i class="bi bi-download me-1"></i>Exportar
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaUsuarios">
                            <thead class="table-light">
                                <tr>
                                    <th class="ordenable border-0 py-3" data-columna="0">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-person me-2 text-primary"></i>
                                            Nombre y Apellido
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="1">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-envelope me-2 text-primary"></i>
                                            Correo Electrónico
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="2">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-shield me-2 text-primary"></i>
                                            Rol
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="3">
                                        <div class="d-flex align-items-center cursor-pointer">
                                            <i class="bi bi-activity me-2 text-primary"></i>
                                            Estado
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr class="fila-usuario" data-nombre="@usuario.Nombre @usuario.Apellido" data-email="@usuario.Email" data-rol="@Html.DisplayFor(modelItem => usuario.Rol)" data-estado="@(usuario.Activo ? "activo" : "inactivo")">
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="circulo-avatar me-3">
                                                    @usuario.Nombre.Substring(0, 1).ToUpper()@usuario.Apellido.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <div class="fw-semibold text-dark">@usuario.Nombre @usuario.Apellido</div>
                                                    <small class="text-muted">ID: @usuario.UsuarioId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div class="text-dark">@usuario.Email</div>
                                        </td>
                                        <td class="py-3">
                                            @{
                                                string claseInsignia = usuario.Rol.ToString() switch
                                                {
                                                    "Administrador" => "bg-danger",
                                                    "Usuario" => "bg-info",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @claseInsignia px-3 py-2 rounded-pill">
                                                @Html.DisplayFor(modelItem => usuario.Rol)
                                            </span>
                                        </td>
                                        <td class="py-3">
                                            @if (usuario.Activo)
                                            {
                                                <span class="badge bg-success px-3 py-2 rounded-pill">
                                                    <i class="bi bi-check-circle me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary px-3 py-2 rounded-pill">
                                                    <i class="bi bi-x-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                @if (usuario.Activo)
                                                {
                                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                                            onclick="confirmarAccion('@usuario.UsuarioId', 'baja', '@usuario.Nombre @usuario.Apellido')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Dar de baja">
                                                        <i class="bi bi-person-dash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm"
                                                            onclick="confirmarAccion('@usuario.UsuarioId', 'alta', '@usuario.Nombre @usuario.Apellido')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom"  title="Dar de alta">
                                                        <i class="bi bi-person-plus"></i>
                                                    </button>
                                                }
                                                <a asp-controller="Usuario" asp-action="EditarUsuario" asp-route-id="@usuario.UsuarioId"
                                                   class="btn btn-outline-primary btn-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar usuario">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-controller="Usuario" asp-action="PerfilUsuario" asp-route-id="@usuario.UsuarioId"
                                                   class="btn btn-outline-info btn-sm" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver perfil">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <div class="row mt-4">
        <div class="col-12">
            <nav aria-label="Paginación de usuarios">
                <ul class="pagination justify-content-center" id="paginacion">
                    <!-- La paginación será generada por JavaScript -->
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="etiquetaModalConfirmacion" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="etiquetaModalConfirmacion">Confirmar Acción</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body pt-0">
                <div class="text-center py-3">
                    <div class="mb-3">
                        <i id="iconoConfirmacion" class="display-4"></i>
                    </div>
                    <p id="mensajeConfirmacion" class="mb-0 fs-6"></p>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" id="botonConfirmar" class="btn">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<!-- Formularios Ocultos -->
<div style="display: none;">
    @foreach (var usuario in Model)
    {
        <form id="formularioBaja@(usuario.UsuarioId)" asp-controller="Usuario" asp-action="DarBajaUsuario" asp-route-id="@usuario.UsuarioId" method="post">
            @Html.AntiForgeryToken()
        </form>
        <form id="formularioAlta@(usuario.UsuarioId)" asp-controller="Usuario" asp-action="DarAltaUsuario" asp-route-id="@usuario.UsuarioId" method="post">
            @Html.AntiForgeryToken()
        </form>
    }
</div>

<script src="~/js/Admin/Usuarios.js" asp-append-version="true"></script>