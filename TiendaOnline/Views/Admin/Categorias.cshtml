@model IEnumerable<TiendaOnline.Models.Categoria>
@{
    ViewData["Title"] = "Gestión de Categorías";
}

@* Puedes crear un CSS específico o reutilizar el de Usuarios si los estilos son globales *@
<link rel="stylesheet" href="~/css/Admin/Usuarios.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-tags me-2 text-primary"></i>
                        Gestión de Categorías
                    </h2>
                    <p class="text-muted mb-0">Organiza la estructura de hardware y componentes</p>
                </div>
                <a asp-controller="Categoria" asp-action="AgregarCategoria" class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle me-2"></i>
                    Nueva Categoría
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="campoBusqueda" class="form-label fw-semibold">
                                <i class="bi bi-search me-1"></i>Buscar
                            </label>
                            <input type="text" id="campoBusqueda" class="form-control" placeholder="Buscar por nombre de categoría...">
                        </div>
                        <div class="col-md-4">
                            <label for="filtroTipo" class="form-label fw-semibold">
                                <i class="bi bi-funnel me-1"></i>Nivel
                            </label>
                            <select id="filtroTipo" class="form-select">
                                <option value="">Todos los niveles</option>
                                <option value="Principal">Categorías Principales</option>
                                <option value="Subcategoría">Subcategorías</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" id="limpiarFiltros" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <span id="totalCategorias">@Model.Count()</span> categorías registradas
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaCategorias">
                            <thead class="table-light">
                                <tr>
                                    <th class="py-3" style="width: 40%">
                                        <i class="bi bi-folder2-open me-2 text-primary"></i>Jerarquía / Nombre
                                    </th>
                                    <th class="py-3">
                                        <i class="bi bi-diagram-3 me-2 text-primary"></i>Dependencias
                                    </th>
                                    <th class="py-3">
                                        <i class="bi bi-activity me-2 text-primary"></i>Estado
                                    </th>
                                    <th class="py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    bool esPrincipal = item.CategoriaPadreId == null;
                                    <tr class="fila-categoria" data-nombre="@item.Nombre" data-tipo="@(esPrincipal ? "Principal" : "Subcategoría")">
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="circulo-avatar me-3 @(esPrincipal ? "bg-primary-light" : "bg-light")">
                                                    <i class="bi @(esPrincipal ? "bi-folder-fill text-primary" : "bi-folder text-secondary")"></i>
                                                </div>
                                                <div>
                                                    @if (!esPrincipal)
                                                    {
                                                        <small class="text-muted d-block mb-1">
                                                            @item.CategoriaPadre.Nombre <i class="bi bi-chevron-right mx-1 small"></i>
                                                        </small>
                                                    }
                                                    <div class="fw-semibold text-dark">@item.Nombre</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span class="text-muted small">
                                                <i class="bi bi-box me-1"></i>@item.Productos.Count Productos<br />
                                                <i class="bi bi-node-plus me-1"></i>@item.Subcategorias.Count Subcategorías
                                            </span>
                                        </td>
                                        <td class="py-3">
                                            @* Asumiendo que agregaste el bool Activa *@
                                            <span class="badge @(true ? "bg-success" : "bg-secondary") px-3 py-2 rounded-pill">
                                                Activa
                                            </span>
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <a asp-action="Editar" asp-route-id="@item.CategoriaId"
                                                   class="btn btn-outline-primary btn-sm" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                        onclick="confirmarEliminar('@item.CategoriaId', '@item.Nombre')"
                                                        title="Eliminar" @(item.Productos.Any() || item.Subcategorias.Any() ? "disabled" : "")>
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">Eliminar Categoría</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-exclamation-triangle text-warning display-4 mb-3"></i>
                <p id="mensajeEliminar"></p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <form id="formEliminar" asp-action="Eliminar" method="post">
                    <input type="hidden" name="id" id="idAEliminar" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar Definitivamente</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Función para el modal de eliminación
        function confirmarEliminar(id, nombre) {
            document.getElementById('idAEliminar').value = id;
            document.getElementById('mensajeEliminar').innerText = `¿Estás seguro de que deseas eliminar la categoría "${nombre}"? Esta acción no se puede deshacer.`;
            var modal = new bootstrap.Modal(document.getElementById('modalEliminar'));
            modal.show();
        }

        // Filtro básico en tiempo real
        document.getElementById('campoBusqueda').addEventListener('keyup', function() {
            let valor = this.value.toLowerCase();
            document.querySelectorAll('.fila-categoria').forEach(fila => {
                let nombre = fila.getAttribute('data-nombre').toLowerCase();
                fila.style.display = nombre.includes(valor) ? '' : 'none';
            });
        });
    </script>
}