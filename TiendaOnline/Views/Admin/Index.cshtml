@{
    ViewData["Title"] = "Panel de Administración";
}
<link rel="stylesheet" href="~/css/Admin/Auditorias.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Encabezado del Panel -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Encabezado -->
                <div class="text-center mb-5">
                    <h1 class="display-5 fw-bold text-dark mb-3">
                        <i class="bi bi-speedometer2 me-3 text-primary"></i>
                        Panel de Administración
                    </h1>
                    <p class="lead text-muted">Selecciona la sección que deseas administrar</p>
                </div>

                <!-- Enlaces de Administración -->
                <div class="admin-links">
                    <a asp-controller="Admin" asp-action="Productos" class="admin-link">
                        <div class="link-icon products">
                            <i class="bi bi-box-seam-fill"></i>
                        </div>
                        <div class="link-content">
                            <h5 class="link-title">Productos</h5>
                            <p class="link-description">Gestionar catálogo de productos</p>
                        </div>
                        <div class="link-arrow">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-controller="Admin" asp-action="Usuarios" class="admin-link">
                        <div class="link-icon users">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="link-content">
                            <h5 class="link-title">Usuarios</h5>
                            <p class="link-description">Administrar cuentas de usuarios</p>
                        </div>
                        <div class="link-arrow">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-controller="Admin" asp-action="Pedidos" class="admin-link">
                        <div class="link-icon orders">
                            <i class="bi bi-bag-check-fill"></i>
                        </div>
                        <div class="link-content">
                            <h5 class="link-title">Pedidos</h5>
                            <p class="link-description">Procesar y gestionar pedidos</p>
                        </div>
                        <div class="link-arrow">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-controller="Admin" asp-action="Reportes" class="admin-link">
                        <div class="link-icon reports">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <div class="link-content">
                            <h5 class="link-title">Reportes de Ventas</h5>
                            <p class="link-description">Análisis y estadísticas de ventas</p>
                        </div>
                        <div class="link-arrow">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </a>

                    <a asp-controller="Admin" asp-action="Auditorias" class="admin-link">
                        <div class="link-icon audit">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="link-content">
                            <h5 class="link-title">Auditorías</h5>
                            <p class="link-description">Registros y logs del sistema</p>
                        </div>
                        <div class="link-arrow">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
