@using System.Security.Claims
@{
    var idUsuario = User.Claims.FirstOrDefault(c => c.Type == "UsuarioId")?.Value;
    bool usuarioEstaAutenticado = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStore PC</title>
    <meta name="description" content="Tu tienda de confianza para componentes de PC">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <!-- Hojas de Estilo -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaOnline.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="h-100 d-flex flex-column">
    <header class="border-bottom sticky-top bg-white shadow-sm">
        <div class="bg-light text-dark py-1 border-bottom d-none d-md-block text-center" style="font-size: 0.8rem; font-weight: 500;">
            <i class="bi bi-cpu me-2 text-primary"></i>
            ¡Nuevos procesadores serie 9000 disponibles! Envíos a todo el país.
        </div>

        <nav class="navbar navbar-expand-lg navbar-light py-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="brand-icon-wrapper me-2">
                        <i class="bi bi-cpu-fill"></i>
                    </div>
                    <span class="fw-bold fs-3 text-dark">TECH<span class="text-primary">STORE</span></span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navegacionPrincipal">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navegacionPrincipal">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold px-3 text-uppercase small" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold px-3 text-uppercase small" asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                    </ul>

                    <div class="me-lg-3 my-2 my-lg-0">
                        <form class="d-flex position-relative" method="get" asp-controller="Producto" asp-action="Index">
                            <input class="form-control bg-light border-0 rounded-pill ps-4"
                                   style="font-size: 0.9rem; width: 240px;"
                                   type="search" name="busqueda" placeholder="Buscar hardware..." aria-label="Buscar">
                            <button class="btn text-primary position-absolute end-0 me-1" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>

                    <div class="me-lg-3 d-grid d-lg-block my-2 my-lg-0">
                        <a class="btn btn-white border-0 position-relative hover-lift text-dark d-flex align-items-center justify-content-center" asp-controller="Carrito" asp-action="Index">
                            <i class="bi bi-cart3 fs-5"></i>
                            <span class="d-lg-none ms-2">Carrito</span>
                        </a>
                    </div>

                    <div class="dropdown d-grid d-lg-block">
                        <button class="btn btn-primary rounded-pill px-4 d-flex align-items-center justify-content-center gap-2 shadow-sm" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle fs-5"></i>
                            <span class="fw-medium small">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @User.Identity.Name
                                }
                                else
                                {
                                    @:Cuenta
                                }
                            </span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a class="dropdown-item py-2" asp-controller="Usuario" asp-action="PerfilUsuario" asp-route-id="@idUsuario">
                                        <i class="bi bi-person me-2 text-primary"></i>Mi Perfil
                                    </a>
                                </li>

                                @if (User.IsInRole("Administrador"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-gear me-2 text-danger"></i>Panel Admin
                                        </a>
                                    </li>
                                }
                                else if (User.IsInRole("Repartidor"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Admin" asp-action="Pedidos">
                                            <i class="bi bi-receipt me-2 text-success"></i>Pedidos
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Pedido" asp-action="MisPedidos">
                                            <i class="bi bi-receipt me-2 text-info"></i>Mis Pedidos
                                        </a>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger py-2" asp-controller="Usuario" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item py-2" asp-controller="Usuario" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right me-2 text-primary"></i>Ingresar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item py-2" asp-controller="Usuario" asp-action="Register">
                                        <i class="bi bi-person-plus me-2 text-success"></i>Registrarse
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container">
            @await Html.PartialAsync("_MensajeTempData")
            @RenderBody()
        </div>
    </main>

    <footer class="border-top mt-auto pt-5 pb-4">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="brand-icon-wrapper me-2" style="width: 32px; height: 32px;">
                            <i class="bi bi-cpu-fill fs-6"></i>
                        </div>                        
                        <div>
                            <h5 class="mb-0 fw-bold text-dark">TECH<span class="text-primary">STORE</span></h5>
                            <small class="text-secondary">Expertos en PC Components</small>
                        </div>
                    </div>
                    <p class="text-secondary small mb-4">
                        Tu tienda de confianza para armar la PC de tus sueños. Componentes de alto rendimiento y asesoramiento especializado.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle shadow-sm"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle shadow-sm"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-sm rounded-circle shadow-sm"><i class="bi bi-twitter-x"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="text-uppercase fw-bold mb-3">Navegación</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="/" class="text-secondary text-decoration-none">Inicio</a></li>
                        <li class="mb-2"><a href="/Producto" class="text-secondary text-decoration-none">Productos</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Promociones</a></li>
                        <li class="mb-2"><a href="#" class="text-secondary text-decoration-none">Contacto</a></li>
                        <li class="mb-2"><a href="/Home/Privacy" class="text-secondary text-decoration-none">Privacidad</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h6 class="text-uppercase fw-bold mb-3">Aceptamos</h6>
                    <div class="d-flex flex-wrap gap-2 fs-3 text-secondary">
                        <i class="bi bi-credit-card"></i>
                        <i class="bi bi-paypal"></i>
                        <i class="bi bi-bank"></i>
                    </div>
                    <p class="small text-secondary mt-3">
                        <i class="bi bi-truck me-2"></i>Envíos a todo el país.
                    </p>
                </div>

                <div class="col-lg-3 col-md-4">
                    <h6 class="text-dark fw-bold mb-3 small text-uppercase" style="letter-spacing: 1px;">Soporte</h6>
                    <ul class="list-unstyled footer-contact">
                        <li class="d-flex align-items-center mb-3">
                            <div class="contact-icon me-2"><i class="bi bi-envelope text-info "></i></div>
                            <span class="small">soporte@techstore.com</span>
                        </li>
                        <li class="d-flex align-items-center mb-3">
                            <div class="contact-icon me-2"><i class="bi bi-whatsapp text-success"></i></div>
                            <span class="small">+54 11 1234-5678</span>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="contact-icon me-2"><i class="bi bi-geo-alt"></i></div>
                            <span class="small">Buenos Aires, Argentina</span>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 border-secondary opacity-25">

            <div class="text-center">
                &copy; 2026 TechStore PC. Todos los derechos reservados.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
