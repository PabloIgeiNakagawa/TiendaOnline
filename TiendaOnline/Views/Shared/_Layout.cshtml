@using System.Security.Claims
@{
    var idUsuario = User.Claims.FirstOrDefault(c => c.Type == "UsuarioId")?.Value;
    bool usuarioEstaAutenticado = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStore PC</title>
    <meta name="description" content="Tu tienda de confianza para componentes de PC">
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <!-- Hojas de Estilo -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaOnline.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="h-100 d-flex flex-column">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-4 px-0">
            <div class="container">
                <!-- Marca -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div class="d-flex align-items-center justify-content-center bg-primary fs-6 text-white rounded rounded-2 me-2" style="width:32px; height:32px;">
                        <i class="bi bi-cpu-fill"></i>
                    </div>
                    <span class="fw-bold fs-4 text-black">TechStore</span>
                </a>

                <!-- Botón Móvil -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navegacionPrincipal">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navegación Principal -->
                <div class="collapse navbar-collapse" id="navegacionPrincipal">
                    <!-- Navegación Central -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-medium px-3 py-2 rounded" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium px-3 py-2 rounded"  asp-controller="Producto" asp-action="Index">Productos</a>
                        </li>
                    </ul>

                    <!-- Barra de Búsqueda -->
                    <div class="barra-busqueda me-3">
                        <form class="d-flex" method="get" asp-controller="Producto" asp-action="Index">
                            <div class="input-group">
                                <input class="form-control" type="search" name="busqueda" placeholder="Buscar productos..." aria-label="Buscar">
                                <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="me-3">
                        <a class="btn btn-outline-primary" asp-controller="Carrito" asp-action="Index"><i class="bi bi-cart-fill"></i> Carrito</a>
                    </div>

                    <!-- Acciones del Usuario -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- Menú de Usuario -->
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle rounded fw-medium" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span>@User.Identity.Name</span>
                                }
                                else
                                {
                                    <span>Cuenta</span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end rounded-2 py-2 px-0">
                                @if (usuarioEstaAutenticado)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="PerfilUsuario" asp-route-id="@idUsuario">
                                            <i class="bi bi-person me-2"></i>Mi Perfil
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-gear me-2"></i>Panel de Admin
                                            </a>
                                        </li>
                                    } 
                                    else if (User.IsInRole("Repartidor"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Pedidos">
                                                <i class="bi bi-receipt me-2"></i>Pedidos
                                            </a>
                                        </li>
                                    } 
                                    else
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Pedido" asp-action="MisPedidos">
                                                <i class="bi bi-receipt me-2"></i>Mis Pedidos
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Usuario" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Login">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Register">
                                            <i class="bi bi-person-plus me-2"></i>Registrarse
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div class="container">
            @await Html.PartialAsync("_MensajeTempData")
            @RenderBody()
        </div>
    </main>

    <footer class="bg-white border-top mt-auto">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <div class="me-2">
                            <i class="bi bi-cpu-fill"></i>
                        </div>
                        <div>
                            <span>TechStore</span>
                            <small class="text-muted d-block">PC Components</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        &copy; 2025 TechStore PC. Todos los derechos reservados.
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
