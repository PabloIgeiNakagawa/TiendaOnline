@model TiendaOnline.Models.Login
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<link rel="stylesheet" href="~/css/Usuario/Login.css" asp-append-version="true" />

<div class="login-container">
    <div class="login-card">
        <!-- Header -->
        <div class="login-header">
            <div class="login-logo">
                <i class="bi bi-person-circle"></i>
            </div>
            <h1 class="login-title">Bienvenido</h1>
            <p class="login-subtitle">Inicia sesión en tu cuenta</p>
        </div>

        <!-- Body -->
        <div class="login-body">

            <!-- Formulario -->
            <form asp-action="Login" method="post" id="loginForm">
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div class="form-floating">
                    <input asp-for="Email"
                           class="form-control"
                           id="email"
                           placeholder="correo@ejemplo.com"
                           autocomplete="email"
                           required />
                    <label for="email">Correo Electrónico</label>
                    <i class="bi bi-envelope input-icon"></i>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>

                <!-- Contraseña -->
                <div class="form-floating">
                    <input asp-for="Contrasena"
                           type="password"
                           class="form-control"
                           id="password"
                           placeholder="Contraseña"
                           autocomplete="current-password"
                           required />
                    <label for="password">Contraseña</label>
                    <i class="bi bi-lock input-icon"></i>
                    <button type="button" class="password-toggle" onclick="togglePassword()">
                        <i class="bi bi-eye" id="passwordIcon"></i>
                    </button>
                    <span asp-validation-for="Contrasena" class="invalid-feedback"></span>
                </div>

                <!-- Recordar y Olvidé contraseña -->
                <div class="remember-forgot">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" value="true">
                        <label class="form-check-label" for="rememberMe">
                            Recordar sesión
                        </label>
                    </div>
                    <a href="#" class="forgot-password">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

                <!-- Botón de login -->
                <button type="submit" class="btn btn-login" id="loginBtn">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Iniciar Sesión
                </button>
            </form>

            <!-- Divider -->
            <div class="divider">
                <span>o</span>
            </div>

            <!-- Enlace de registro -->
            <div class="register-link">
                ¿No tienes una cuenta?
                <a asp-controller="Usuario" asp-action="Register">Regístrate aquí</a>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Usuario/Login.js" asp-append-version="true"></script>