@model TiendaOnline.Models.Login
@{
    ViewData["Title"] = "Iniciar Sesión";
    string linkStyle = "fw-semibold text-decoration-none link-underline-opacity-100-hover";
    string invalidFeedback = "d-block small mt-2 text-danger";
}
@section Styles{
    <link rel="stylesheet" href="~/css/Usuario/Login.css" asp-append-version="true" />
}

<div class="d-flex justify-content-center align-items-center my-5">
    <div class="position-relative rounded-4 shadow overflow-hidden w-100" style="max-width: 400px;">
        <!-- Header -->
        <div class="position-relative text-center text-white bg-primary px-3 pb-3 pt-4 rounded-top-4">
            <div class="d-flex align-items-center justify-content-center rounded-circle mx-auto mb-3" style="width:80px; height:80px;">
                <i class="bi bi-person-circle fs-1 text-white"></i>
            </div>
            <h2 class="fw-bold mb-2">Bienvenido</h2>
            <p class="small opacity-75">Inicia sesión en tu cuenta</p>
        </div>

        <!-- Body -->
        <div class="px-4 py-5">

            <!-- Formulario -->
            <form asp-action="Login" method="post" id="loginForm">
                @Html.AntiForgeryToken()

                <!-- Email -->
                <div class="form-floating mb-4">
                    <input asp-for="Email"
                           class="form-control rounded-3"
                           id="email"
                           placeholder="correo@ejemplo.com"
                           autocomplete="email"
                           required />
                    <label class="ps-5 text-body-secondary" for="email">Correo Electrónico</label>
                    <i class="bi bi-envelope input-icon position-absolute top-50 text-body"></i>
                    <span asp-validation-for="Email" class="@invalidFeedback"></span>
                </div>

                <!-- Contraseña -->
                <div class="form-floating mb-4">
                    <input asp-for="Contrasena"
                           type="password"
                           class="form-control rounded-3"
                           id="password"
                           placeholder="Contraseña"
                           autocomplete="current-password"
                           required />
                    <label class="ps-5 text-body-secondary" for="password">Contraseña</label>
                    <i class="bi bi-lock input-icon position-absolute top-50 text-body"></i>
                    <button type="button" class="password-toggle position-absolute top-50 bg-transparent border-0 text-body-tertiary cursor-pointer border-1" onclick="togglePassword()">
                        <i class="bi bi-eye" id="passwordIcon"></i>
                    </button>
                    <span asp-validation-for="Contrasena" class="@invalidFeedback"></span>
                </div>

                <!-- Recordar y Olvidé contraseña -->
                <div class="d-flex justify-content-end mb-4">
                    <a href="#" class="@linkStyle">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

                <!-- Botón de login -->
                <button type="submit" class="btn btn-login btn-primary w-100 p-3 rounded-3 fs-6 fw-semibold text-uppercase position-relative overflow-hidden" id="loginBtn">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Iniciar Sesión
                </button>
            </form>

            <!-- Divider -->
            <div class="position-relative bg-body-secondary my-3"></div>

            <!-- Enlace de registro -->
            <div class="text-center mt-4 text-secondary">
                ¿No tienes una cuenta?
                <a class="@linkStyle" asp-controller="Usuario" asp-action="Register">Regístrate aquí</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Solo función para mostrar/ocultar contraseña
        function togglePassword() {
            var passwordInput = document.getElementById('password');
            var passwordIcon = document.getElementById('passwordIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.className = 'bi bi-eye-slash';
            } else {
                passwordInput.type = 'password';
                passwordIcon.className = 'bi bi-eye';
            }
        }
    </script>
}