@model TiendaOnline.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<link rel="stylesheet" href="~/css/Usuario/EditarUsuario.css" asp-append-version="true" />

<div class="container-fluid py-4">
    <!-- Migas de Pan -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Usuario" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-people me-1"></i>Usuarios
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Editar Usuario</li>
        </ol>
    </nav>

    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div class="avatar-grande me-3">
                        @Model.Nombre.Substring(0, 1).ToUpper()@Model.Apellido.Substring(0, 1).ToUpper()
                    </div>
                    <div>
                        <h2 class="mb-1 fw-bold text-dark">Editar Usuario</h2>
                        <p class="text-muted mb-0">@Model.Nombre @Model.Apellido - ID: @Model.UsuarioId</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <a asp-controller="Usuario" asp-action="PerfilUsuario" asp-route-id="@Model.UsuarioId"
                       class="btn btn-outline-info">
                        <i class="bi bi-eye me-1"></i>Ver Perfil
                    </a>
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                    <button class="btn btn-outline-secondary" onclick="exportarDatosUsuario()">
                        <i class="bi bi-download me-1"></i>Exportar Datos
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-person-gear me-2 text-primary"></i>
                        Información del Usuario
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditarUsuario" method="post" id="formularioEditarUsuario" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UsuarioId" />

                        <!-- Sección de Información Personal -->
                        <div class="mb-4">
                            <h6 class="text-muted mb-3 fw-semibold">
                                <i class="bi bi-person-circle me-2"></i>Información Personal
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Nombre" class="form-control" id="campoNombre" placeholder="Nombre" />
                                        <label for="campoNombre">
                                            <i class="bi bi-person me-1"></i>Nombre
                                        </label>
                                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Apellido" class="form-control" id="campoApellido" placeholder="Apellido" />
                                        <label for="campoApellido">
                                            <i class="bi bi-person me-1"></i>Apellido
                                        </label>
                                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sección de Información de Contacto -->
                        <div class="mb-4">
                            <h6 class="text-muted mb-3 fw-semibold">
                                <i class="bi bi-telephone me-2"></i>Información de Contacto
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Telefono" class="form-control" id="campoTelefono" placeholder="Teléfono" />
                                        <label for="campoTelefono">
                                            <i class="bi bi-telephone me-1"></i>Teléfono
                                        </label>
                                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Direccion" class="form-control" id="campoDireccion" placeholder="Dirección" />
                                        <label for="campoDireccion">
                                            <i class="bi bi-geo-alt me-1"></i>Dirección
                                        </label>
                                        <span asp-validation-for="Direccion" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sección de Rol (Solo para Administradores) -->
                        @if (User.IsInRole("Administrador"))
                        {
                            <div class="mb-4">
                                <h6 class="text-muted mb-3 fw-semibold">
                                    <i class="bi bi-shield-check me-2"></i>Configuración de Acceso
                                </h6>
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="Rol" class="form-select" id="campoRol" asp-items="Html.GetEnumSelectList<TiendaOnline.Models.Rol>()">
                                            </select>
                                            <label for="campoRol">
                                                <i class="bi bi-shield me-1"></i>Rol del Usuario
                                            </label>
                                            <span asp-validation-for="Rol" class="text-danger small"></span>
                                        </div>
                                        <div class="form-text">
                                            <small class="text-muted">
                                                <i class="bi bi-info-circle me-1"></i>
                                                El rol determina los permisos del usuario en el sistema
                                            </small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="alert alert-info border-0 h-100 d-flex align-items-center">
                                            <div>
                                                <i class="bi bi-lightbulb me-2"></i>
                                                <strong>Roles disponibles:</strong><br>
                                                <small>
                                                    • <strong>Usuario:</strong> Acceso básico<br>
                                                    • <strong>Administrador:</strong> Acceso completo
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Botones de Acción -->
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary btn-lg px-4" id="botonGuardar">
                                    <i class="bi bi-check-circle me-2"></i>
                                    <span class="texto-boton">Guardar Cambios</span>
                                    <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="restablecerFormulario()">
                                    <i class="bi bi-arrow-clockwise me-2"></i>Restablecer
                                </button>
                            </div>
                            <a asp-controller="Usuario" asp-action="Index" class="btn btn-outline-danger">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Éxito -->
<div class="modal fade" id="modalExito" tabindex="-1" aria-labelledby="etiquetaModalExito" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h5 class="fw-bold mb-2">¡Cambios Guardados!</h5>
                <p class="text-muted mb-3">La información del usuario se ha actualizado correctamente.</p>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Continuar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Usuario/EditarUsuario.js" asp-append-version="true"></script>