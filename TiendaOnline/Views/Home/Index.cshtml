@{
    ViewData["Title"] = "Inicio";
    ViewData["MostrarMigasPan"] = false;
}

<link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />

<!-- Sección Hero -->
<section class="seccion-hero">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="contenido-hero">
                    <span class="insignia-hero">🔥 Nueva Generación</span>
                    <h1 class="titulo-hero">
                        Construye tu
                        <span class="gradiente-texto">PC Gaming</span>
                        de ensueño
                    </h1>
                    <p class="descripcion-hero">
                        Descubre los componentes más avanzados para gaming, workstation y uso profesional.
                        Calidad garantizada y los mejores precios del mercado.
                    </p>
                    <div class="acciones-hero">
                        <a href="#" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-lightning-fill me-2"></i>Ver Ofertas
                        </a>
                        <a href="#" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-play-circle me-2"></i>Arma tu PC
                        </a>
                    </div>
                    <div class="estadisticas-hero">
                        <div class="elemento-estadistica">
                            <span class="numero-estadistica">10K+</span>
                            <span class="etiqueta-estadistica">Productos</span>
                        </div>
                        <div class="elemento-estadistica">
                            <span class="numero-estadistica">50K+</span>
                            <span class="etiqueta-estadistica">Clientes</span>
                        </div>
                        <div class="elemento-estadistica">
                            <span class="numero-estadistica">24/7</span>
                            <span class="etiqueta-estadistica">Soporte</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="imagen-hero">
                    <div class="tarjeta-flotante tarjeta-1">
                        <img src="/placeholder.svg?height=80&width=80" alt="RTX 4090" class="imagen-componente">
                        <div class="contenido-tarjeta">
                            <h6>RTX 4090</h6>
                            <span class="precio">$1.899.999</span>
                        </div>
                    </div>
                    <div class="tarjeta-flotante tarjeta-2">
                        <img src="/placeholder.svg?height=80&width=80" alt="AMD Ryzen 9" class="imagen-componente">
                        <div class="contenido-tarjeta">
                            <h6>Ryzen 9 7950X</h6>
                            <span class="precio">$899.999</span>
                        </div>
                    </div>
                    <div class="tarjeta-flotante tarjeta-3">
                        <img src="/placeholder.svg?height=80&width=80" alt="DDR5 RAM" class="imagen-componente">
                        <div class="contenido-tarjeta">
                            <h6>DDR5 32GB</h6>
                            <span class="precio">$299.999</span>
                        </div>
                    </div>
                    <div class="imagen-principal-hero">
                        <img src="/placeholder.svg?height=400&width=500" alt="Gaming PC" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Sección de Categorías -->
<section class="seccion-categorias py-5">
    <div class="container">
        <div class="encabezado-seccion text-center mb-5">
            <h2 class="titulo-seccion">Explora por Categorías</h2>
            <p class="subtitulo-seccion">Encuentra exactamente lo que necesitas para tu build</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="bi bi-cpu-fill"></i>
                    </div>
                    <h5>Procesadores</h5>
                    <p>Intel & AMD últimas generaciones</p>
                    <span class="conteo-categoria">250+ productos</span>
                    <a href="#" class="enlace-categoria">Ver todos</a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="bi bi-gpu-card"></i>
                    </div>
                    <h5>Tarjetas Gráficas</h5>
                    <p>NVIDIA RTX & AMD Radeon</p>
                    <span class="conteo-categoria">180+ productos</span>
                    <a href="#" class="enlace-categoria">Ver todos</a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="bi bi-memory"></i>
                    </div>
                    <h5>Memoria RAM</h5>
                    <p>DDR4 & DDR5 alta velocidad</p>
                    <span class="conteo-categoria">120+ productos</span>
                    <a href="#" class="enlace-categoria">Ver todos</a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="bi bi-device-hdd-fill"></i>
                    </div>
                    <h5>Almacenamiento</h5>
                    <p>SSD NVMe & SATA de alta velocidad</p>
                    <span class="conteo-categoria">200+ productos</span>
                    <a href="#" class="enlace-categoria">Ver todos</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Sección de Marcas -->
<section class="seccion-marcas py-5 bg-light">
    <div class="container">
        <div class="encabezado-seccion text-center mb-5">
            <h2 class="titulo-seccion">Marcas de Confianza</h2>
            <p class="subtitulo-seccion">Trabajamos con las mejores marcas del mercado</p>
        </div>
        <div class="grilla-marcas">
            <div class="elemento-marca">
                <img src="~/img/logos/Nvidia.svg" alt="NVIDIA" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/AMD.svg" alt="AMD" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/Intel.svg" alt="Intel" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/ASUS.svg" alt="ASUS" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/MSI.svg" alt="MSI" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/Corsair.svg" alt="Corsair" class="logo-marca" height="60" width="120">
            </div>
        </div>
    </div>
</section>

<!-- Sección de Características -->
<section class="seccion-caracteristicas py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-caracteristica text-center">
                    <div class="icono-caracteristica">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h5>Envío Gratis</h5>
                    <p>En compras mayores a $50.000 enviamos gratis a todo el país</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-caracteristica text-center">
                    <div class="icono-caracteristica">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h5>Garantía Oficial</h5>
                    <p>Todos nuestros productos cuentan con garantía oficial de fábrica</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-caracteristica text-center">
                    <div class="icono-caracteristica">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h5>Soporte 24/7</h5>
                    <p>Nuestro equipo técnico está disponible para ayudarte cuando lo necesites</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-caracteristica text-center">
                    <div class="icono-caracteristica">
                        <i class="bi bi-credit-card"></i>
                    </div>
                    <h5>Pago Seguro</h5>
                    <p>Múltiples métodos de pago seguros y financiación disponible</p>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/Home/Index.js" asp-append-version="true"></script>
