@{
    ViewData["Title"] = "Inicio";
}
@section Scripts{
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hover-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }

        .carousel-full-width {
            width: 100vw;
            position: relative;
            left: 50%;
            right: 50%;
            margin-left: -50vw;
            margin-right: -50vw;
        }

        body {
            overflow-x: hidden;
            width: 100%;
        }
    </style>
}
<!-- Hero Section con Carousel -->
<section id="heroCarousel" class="carousel slide carousel-fade carousel-full-width" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
    </div>

    <div class="carousel-inner">
        <!-- Slide 1: PC Gaming -->
        <div class="carousel-item active" style="height: 650px;">
            <div class="position-relative overflow-hidden h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="container position-relative h-100 d-flex align-items-center">
                    <div class="row align-items-center w-100 mx-0">
                        <div class="col-lg-6 text-white">
                            <span class="badge bg-warning text-dark mb-3 px-3 py-2 fs-6">
                                <i class="bi bi-lightning-fill me-1"></i>Nuevos lanzamientos
                            </span>
                            <h1 class="display-3 fw-bold mb-4">
                                Arma tu PC Gaming<br />
                                <span class="text-warning">de ensueño</span>
                            </h1>
                            <p class="lead mb-4 fs-5 opacity-90">
                                Los mejores componentes para gaming, streaming y creación de contenido. Envío gratis en compras superiores a $50.000
                            </p>
                            <div class="d-flex gap-3 flex-wrap mb-4">
                                <a href="#productos" class="btn btn-warning btn-lg px-4 shadow-lg">
                                    <i class="bi bi-cart-fill me-2"></i>Explorar Productos
                                </a>
                                <a href="#ofertas" class="btn btn-outline-light btn-lg px-4">
                                    Ver Ofertas
                                </a>
                            </div>
                            <div class="row mt-4 pt-3 border-top border-white border-opacity-25">
                                <div class="col-4">
                                    <h3 class="fw-bold mb-1">500+</h3>
                                    <small class="opacity-75">Productos</small>
                                </div>
                                <div class="col-4">
                                    <h3 class="fw-bold mb-1">50+</h3>
                                    <small class="opacity-75">Marcas</small>
                                </div>
                                <div class="col-4">
                                    <h3 class="fw-bold mb-1">10K+</h3>
                                    <small class="opacity-75">Clientes</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 d-none d-lg-block text-center">
                            <img src="~/img/home/pc.webp" alt="PC Gaming" class="img-fluid" style="max-height: 500px; filter: drop-shadow(0 20px 40px rgba(0,0,0,0.4));">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slide 2: RTX 4090 -->
        <div class="carousel-item" style="height: 650px;">
            <div class="position-relative overflow-hidden h-100" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                <div class="container position-relative h-100 d-flex align-items-center">
                    <div class="row align-items-center w-100">
                        <div class="col-lg-6 order-lg-2 text-white">
                            <span class="badge bg-success mb-3 px-3 py-2 fs-6">
                                <i class="bi bi-star-fill me-1"></i>Lo más potente
                            </span>
                            <h1 class="display-3 fw-bold mb-4">
                                Gráficas RTX 40 Series
                            </h1>
                            <p class="lead mb-4 fs-5 opacity-90">
                                La última generación de NVIDIA con Ray Tracing y DLSS 3. Experimenta gráficos como nunca antes.
                            </p>
                            <div class="d-flex gap-3 flex-wrap mb-4">
                                <a href="#gpus" class="btn btn-white btn-lg px-4 shadow-lg">
                                    <i class="bi bi-gpu-card me-2"></i>Ver GPUs
                                </a>
                                <a href="#comparar" class="btn btn-outline-light btn-lg px-4">
                                    Comparar modelos
                                </a>
                            </div>
                            <div class="alert alert-light mb-0">
                                <i class="bi bi-info-circle-fill text-success me-2"></i>
                                <strong>12 cuotas sin interés</strong> disponibles
                            </div>
                        </div>
                        <div class="col-lg-6 order-lg-1 d-none d-lg-block text-center">
                            <img src="~/img/home/rtx-4090.webp" alt="RTX 4090" class="img-fluid" style="max-height: 450px; filter: drop-shadow(0 20px 40px rgba(0,0,0,0.4));">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slide 3: Periféricos Gaming -->
        <div class="carousel-item" style="height: 650px;">
            <div class="position-relative overflow-hidden h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <div class="container position-relative h-100 d-flex align-items-center">
                    <div class="row align-items-center w-100">
                        <div class="col-lg-6 text-white">
                            <span class="badge bg-danger mb-3 px-3 py-2 fs-6">
                                <i class="bi bi-controller me-1"></i>Gaming Setup
                            </span>
                            <h1 class="display-3 fw-bold mb-4">
                                Periféricos<br />
                                <span class="text-warning">Gaming Premium</span>
                            </h1>
                            <p class="lead mb-4 fs-5 opacity-90">
                                Completa tu setup con teclados mecánicos, mouse de alta precisión, auriculares 7.1 y monitores gaming de última generación.
                            </p>
                            <div class="d-flex gap-3 flex-wrap mb-4">
                                <a href="#perifericos" class="btn btn-warning btn-lg px-4 shadow-lg">
                                    <i class="bi bi-mouse me-2"></i>Ver Periféricos
                                </a>
                                <a href="#monitores" class="btn btn-outline-light btn-lg px-4">
                                    Monitores Gaming
                                </a>
                            </div>
                            <div class="row mt-4 pt-3 border-top border-white border-opacity-25">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <i class="bi bi-lightning-charge-fill fs-4 text-warning"></i>
                                    <p class="mb-0 mt-2">
                                        <strong>RGB Personalizable</strong><br />
                                        <small class="opacity-75">Iluminación sincronizada</small>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <i class="bi bi-speedometer2 fs-4 text-warning"></i>
                                    <p class="mb-0 mt-2">
                                        <strong>Alta performance</strong><br />
                                        <small class="opacity-75">0ms de latencia</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 d-none d-lg-block text-center">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="bg-white bg-opacity-10 rounded-4 p-4 text-white">
                                        <i class="bi bi-keyboard-fill display-4 mb-3"></i>
                                        <h6 class="fw-bold">Teclados</h6>
                                        <p class="small opacity-75 mb-0">Mecánicos RGB</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-white bg-opacity-10 rounded-4 p-4 text-white">
                                        <i class="bi bi-mouse-fill display-4 mb-3"></i>
                                        <h6 class="fw-bold">Mouse</h6>
                                        <p class="small opacity-75 mb-0">Alta precisión</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-white bg-opacity-10 rounded-4 p-4 text-white">
                                        <i class="bi bi-headset display-4 mb-3"></i>
                                        <h6 class="fw-bold">Auriculares</h6>
                                        <p class="small opacity-75 mb-0">Sonido 7.1</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="bg-white bg-opacity-10 rounded-4 p-4 text-white">
                                        <i class="bi bi-display display-4 mb-3"></i>
                                        <h6 class="fw-bold">Monitores</h6>
                                        <p class="small opacity-75 mb-0">144Hz+</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Controles del carousel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</section>

<!-- Características destacadas -->
