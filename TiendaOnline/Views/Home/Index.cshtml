@{
    ViewData["Title"] = "Inicio";
    ViewData["MostrarMigasPan"] = false;
}

<link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />

<!-- Section Hero -->
<section id="heroCarousel" class="carousel slide carousel-fade seccion-hero shadow-sm" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
    </div>

    <div class="carousel-inner">
        <div class="carousel-item active min-vh-75">
            <div class="container h-100 d-flex align-items-center">
                <div class="row align-items-center w-100">
                    <div class="col-lg-6 py-5">
                        <span class="badge rounded-pill bg-primary-subtle text-primary mb-3 px-3 py-2">Nuevo stock disponible</span>
                        <h1 class="display-4 fw-bold titulo-hero mb-3">
                            Construye tu <span class="text-gradient">PC Gaming</span> ideal
                        </h1>
                        <p class="lead mb-4 opacity-75">
                            Encuentra los mejores componentes con garantía oficial y envío gratis a todo el país.
                        </p>
                        <div class="d-flex gap-3 mb-5">
                            <a asp-controller="Producto" asp-action="Index" class="btn btn-primary btn-lg px-4 shadow">
                                <i class="bi bi-cart-fill me-2"></i>Ver Productos
                            </a>
                            <a href="#ofertas" class="btn btn-outline-secondary btn-lg px-4">Ofertas</a>
                        </div>
                        <div class="row g-4 stats-container">
                            <div class="col-4">
                                <h4 class="fw-bold mb-0">500+</h4>
                                <small class="text-muted">Productos</small>
                            </div>
                            <div class="col-4 border-start">
                                <h4 class="fw-bold mb-0">50+</h4>
                                <small class="text-muted">Marcas</small>
                            </div>
                            <div class="col-4 border-start">
                                <h4 class="fw-bold mb-0">10K+</h4>
                                <small class="text-muted">Clientes</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 position-relative d-none d-lg-block">
                        <div class="hero-image-wrapper">
                            <img src="~/img/home/pc.webp" alt="PC Gaming" class="img-fluid main-hero-img">
                            <div class="floating-card card-1 shadow-lg p-2 d-flex align-items-center">
                                <img src="~/img/home/rtx-4090.webp" class="rounded me-2" width="50" alt="GPU">
                                <div><p class="small mb-0 fw-bold">RTX 4090</p><span class="text-success small">$1,299</span></div>
                            </div>
                            <div class="floating-card card-2 shadow-lg p-2 d-flex align-items-center">
                                <img src="~/img/home/ryzen9.webp" class="rounded me-2" width="50" alt="CPU">
                                <div><p class="small mb-0 fw-bold">Ryzen 9</p><span class="text-success small">$549</span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-item min-vh-75 bg-body-tertiary">
            <div class="container h-100 d-flex align-items-center">
                <div class="row align-items-center w-100 text-center text-lg-start">
                    <div class="col-lg-6">
                        <h2 class="display-4 fw-bold">Máximo Poder para <span class="text-primary">Workstations</span></h2>
                        <p class="lead mb-4">Optimiza tu flujo de trabajo con hardware profesional.</p>
                        <button class="btn btn-dark btn-lg px-5">Explorar Pro</button>
                    </div>
                    <div class="col-lg-6 d-none d-lg-block">
                        <img src="~/img/home/workstation.webp" class="img-fluid rounded-4 shadow" alt="Workstation">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon opacity-50" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon opacity-50" aria-hidden="true"></span>
    </button>
</section>

<!-- Sección de Categorías -->
<section class="seccion-categorias py-5">
    <div class="container">
        <div class="encabezado-seccion text-center mb-5">
            <h2 class="titulo-seccion">Explora por Categorías</h2>
            <p class="subtitulo-seccion">Encuentra exactamente lo que necesitas para tu build</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="text-white bi bi-cpu-fill"></i>
                    </div>
                    <h5>Procesadores</h5>
                    <p>Intel & AMD últimas generaciones</p>
                    <span class="conteo-categoria">250+ productos</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="text-white bi bi-gpu-card"></i>
                    </div>
                    <h5>Tarjetas Gráficas</h5>
                    <p>NVIDIA RTX & AMD Radeon</p>
                    <span class="conteo-categoria">180+ productos</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="text-white bi bi-memory"></i>
                    </div>
                    <h5>Memoria RAM</h5>
                    <p>DDR4 & DDR5 alta velocidad</p>
                    <span class="conteo-categoria">120+ productos</span>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="tarjeta-categoria">
                    <div class="icono-categoria">
                        <i class="text-white bi bi-device-hdd-fill"></i>
                    </div>
                    <h5>Almacenamiento</h5>
                    <p>SSD NVMe & SATA de alta velocidad</p>
                    <span class="conteo-categoria">200+ productos</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Sección de Marcas -->
<section class="py-5">
    <div class="container">
        <div class="encabezado-seccion text-center mb-5">
            <h2 class="titulo-seccion">Marcas de Confianza</h2>
            <p class="subtitulo-seccion">Trabajamos con las mejores marcas del mercado</p>
        </div>
        <div class="grilla-marcas">
            <div class="elemento-marca">
                <img src="~/img/logos/Nvidia.svg" alt="NVIDIA" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/AMD.svg" alt="AMD" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/Intel.svg" alt="Intel" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/ASUS.svg" alt="ASUS" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/MSI.svg" alt="MSI" class="logo-marca" height="60" width="120">
            </div>
            <div class="elemento-marca">
                <img src="~/img/logos/Corsair.svg" alt="Corsair" class="logo-marca" height="60" width="120">
            </div>
        </div>
    </div>
</section>

