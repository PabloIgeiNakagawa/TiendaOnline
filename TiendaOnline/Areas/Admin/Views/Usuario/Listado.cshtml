@model IEnumerable<TiendaOnline.Domain.Entities.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}
@section Styles{
    <style>
        .ordenable:hover {
            background-color: #e9ecef;
        }

        .icono-orden {
            transition: transform 0.2s ease;
        }

        .orden-asc .icono-orden {
            transform: rotate(180deg);
        }

        .orden-desc .icono-orden {
            transform: rotate(0deg);
        }
    </style>
}

<div class="container-fluid py-4">
    <!-- Sección de Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold">
                        <i class="bi bi-people-fill me-2 text-primary"></i>
                        Gestión de Usuarios
                    </h2>
                    <p class="text-muted mb-0">Administra los usuarios del sistema</p>
                </div>
                <a asp-area="Admin" asp-controller="Usuario" asp-action="CrearUsuario" class="btn btn-primary btn-lg shadow-sm rounded-2">
                    <i class="bi bi-person-plus me-2"></i>
                    Nuevo Usuario
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card rounded-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="campoBusqueda" class="form-label fw-semibold">
                                <i class="bi bi-search me-1"></i>Buscar
                            </label>
                            <input type="text" id="campoBusqueda" class="form-control" placeholder="Buscar por nombre o email...">
                        </div>
                        <div class="col-md-3">
                            <label for="filtroRol" class="form-label fw-semibold">
                                <i class="bi bi-funnel me-1"></i>Filtrar por Rol
                            </label>
                            <select id="filtroRol" class="form-select">
                                <option value="">Todos los roles</option>
                                @foreach (var rol in Html.GetEnumSelectList<Rol>())
                                {
                                    <option value="@rol.Text">@rol.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filtroEstado" class="form-label fw-semibold">
                                <i class="bi bi-toggle-on me-1"></i>Estado
                            </label>
                            <select id="filtroEstado" class="form-select">
                                <option value="">Todos</option>
                                <option value="activo">Activos</option>
                                <option value="inactivo">Inactivos</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" id="limpiarFiltros" class="btn btn-outline-secondary w-100 rounded-2">
                                <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Usuarios -->
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3 shadow-sm border-0">
                <div class="card-header border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">
                            <span id="totalUsuarios">@Model.Count()</span> usuarios encontrados
                        </h5>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary btn-sm rounded-2" onclick="exportarACSV()">
                                <i class="bi bi-download me-1"></i>Exportar
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaUsuarios">
                            <thead class="border-bottom">
                                <tr>
                                    <th class="ordenable border-0 py-3" data-columna="0">
                                        <div role="button" class="d-flex align-items-center">
                                            <i class="bi bi-hash me-2 text-primary"></i>
                                            ID Usuario
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="0">
                                        <div role ="button" class="d-flex align-items-center">
                                            <i class="bi bi-person me-2 text-primary"></i>
                                            Nombre y Apellido
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="1">
                                        <div role="button"  class="d-flex align-items-center">
                                            <i class="bi bi-envelope me-2 text-primary"></i>
                                            Correo Electrónico
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="2">
                                        <div role="button"  class="d-flex align-items-center">
                                            <i class="bi bi-shield me-2 text-primary"></i>
                                            Rol
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="ordenable border-0 py-3" data-columna="3">
                                        <div role="button" class="d-flex align-items-center">
                                            <i class="bi bi-activity me-2 text-primary"></i>
                                            Estado
                                            <i class="bi bi-chevron-expand ms-auto icono-orden"></i>
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr class="fila-usuario" 
                                        data-id="@usuario.UsuarioId"
                                        data-nombre="@usuario.Nombre @usuario.Apellido" 
                                        data-email="@usuario.Email" data-rol="@Html.DisplayFor(modelItem => usuario.Rol)" 
                                        data-estado="@(usuario.Activo ? "activo" : "inactivo")">
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="fw-semibold px-3 py-2 text-uppercase"
                                                     style="font-size: 0.9rem; letter-spacing: 0.5px;">
                                                    #@usuario.UsuarioId.ToString("D6")
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span>@usuario.Nombre @usuario.Apellido</span>
                                        </td>
                                        <td class="py-3">
                                            <div>@usuario.Email</div>
                                        </td>
                                        <td class="py-3">
                                            @{
                                                string claseInsignia = usuario.Rol.ToString() switch
                                                {
                                                    "Administrador" => "bg-danger",
                                                    "Usuario" => "bg-info",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @claseInsignia px-3 py-2 rounded-pill small fw-medium">
                                                @Html.DisplayFor(modelItem => usuario.Rol)
                                            </span>
                                        </td>
                                        <td class="py-3">
                                            @if (usuario.Activo)
                                            {
                                                <span class="badge bg-success px-3 py-2 rounded-pill small fw-medium">
                                                    <i class="bi bi-check-circle me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary px-3 py-2 rounded-pill small fw-medium">
                                                    <i class="bi bi-x-circle me-1"></i>Inactivo
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                @if (usuario.Activo)
                                                {
                                                    <button type="button" class="btn btn-outline-danger btn-sm rounded-2"
                                                            onclick="darBaja('@usuario.UsuarioId', '@usuario.Nombre @usuario.Apellido')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title="Dar de baja">
                                                        <i class="bi bi-person-dash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm rounded-2"
                                                            onclick="darAlta('@usuario.UsuarioId', '@usuario.Nombre @usuario.Apellido')"
                                                            data-bs-toggle="tooltip" data-bs-placement="bottom"  title="Dar de alta">
                                                        <i class="bi bi-person-plus"></i>
                                                    </button>
                                                }
                                                <a asp-area="Usuario" asp-controller="Usuario" asp-action="EditarUsuario" asp-route-id="@usuario.UsuarioId"
                                                   class="btn btn-outline-primary btn-sm rounded-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Editar usuario">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-area="Usuario" asp-controller="Usuario" asp-action="PerfilUsuario" asp-route-id="@usuario.UsuarioId"
                                                   class="btn btn-outline-info btn-sm rounded-2" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ver perfil">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<partial name="_ModalCambiarEstado" />

<!-- Formularios Ocultos -->
<div style="display: none;">
    @foreach (var usuario in Model)
    {
        <form id="formularioBaja@(usuario.UsuarioId)" asp-area="Admin" asp-controller="Usuario" asp-action="DarBaja" asp-route-id="@usuario.UsuarioId" method="post">
            @Html.AntiForgeryToken()
        </form>
        <form id="formularioAlta@(usuario.UsuarioId)" asp-area="Admin" asp-controller="Usuario" asp-action="DarAlta" asp-route-id="@usuario.UsuarioId" method="post">
            @Html.AntiForgeryToken()
        </form>
    }
</div>

@section Scripts{
    <script src="~/js/Admin/Usuario/Index.js" asp-append-version="true"></script>
}
