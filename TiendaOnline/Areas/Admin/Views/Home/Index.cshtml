@model TiendaOnline.Areas.Admin.ViewModels.Home.HomeViewModel
@{
    ViewData["Title"] = "Inicio";
}
@section Styles{
    <style>
        .luz-parpadeante {
            box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.7); /* Color verde por defecto */
            animation: pulso-verde 2s infinite;
        }

        /* Si está offline (rojo), cambiamos el color del pulso */
        .bg-danger.luz-parpadeante {
            box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7);
            animation: pulso-rojo 2s infinite;
        }

        @@keyframes pulso-verde {
            0% {
                transform: translate(-50%, -50%) scale(0.95);
                box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.7);
            }

            70% {
                transform: translate(-50%, -50%) scale(1);
                box-shadow: 0 0 0 10px rgba(40, 167, 69, 0);
            }

            100% {
                transform: translate(-50%, -50%) scale(0.95);
                box-shadow: 0 0 0 0 rgba(40, 167, 69, 0);
            }
        }

        @@keyframes pulso-rojo {
            0% {
                transform: translate(-50%, -50%) scale(0.95);
                box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7);
            }

            70% {
                transform: translate(-50%, -50%) scale(1);
                box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
            }

            100% {
                transform: translate(-50%, -50%) scale(0.95);
                box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
            }
        }
    </style>
}
<div class="container-fluid py-4">
    <div class="d-md-flex justify-content-md-between align-items-md-center mb-4">
        <div>
            <h2 class="mb-1 fw-bold">
                <i class="bi bi-house-door me-2 text-primary"></i>
                Panel de Control
            </h2>
            <p class="text-muted mb-0">Estado operativo del sistema en tiempo real.</p>
        </div>

        <div class="d-flex gap-2">
            <span class="badge rounded-pill border border-secondary p-2 px-3 position-relative @(Model.EstaDbOnline ? "bg-success" : "bg-danger")">
                <i class="bi bi-database-fill me-1"></i>
                DB: @(Model.EstaDbOnline ? "Online" : "Offline")

                <span class="position-absolute top-0 start-100 translate-middle p-1 @(Model.EstaDbOnline ? "bg-success" : "bg-danger") border border-light rounded-circle @(Model.EstaDbOnline ? "luz-parpadeante" : "")">
                    <span class="visually-hidden">Estado</span>
                </span>
            </span>
            <span class="badge rounded-pill bg-secondary border border-secondary p-2 px-3">
                App version: v@(Model.VersionApp)
            </span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card border-secondary-subtle shadow-sm h-100 bg-transparent">
                <div class="card-header border-secondary-subtle bg-transparent py-3">
                    <h5 class="card-title mb-0 text-body">
                        <i class="bi bi-journal-text me-2 text-primary"></i>Actividad Reciente
                    </h5>
                </div>
                <div class="card-body">
                    <div class="position-relative ps-4">
                        <div class="position-absolute top-0 bottom-0 start-0 border-start border-secondary-subtle" style="margin-left: 10px;"></div>

                        @foreach (var cambio in Model.UltimosCambios)
                        {
                            <div class="position-relative mb-4">
                                <div class="position-absolute top-0 start-0 translate-middle-x bg-primary rounded-circle shadow"
                                     style="width: 12px; height: 12px; margin-left: -13px; margin-top: 6px; z-index: 2;"></div>

                                <div class="ms-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <h6 class="mb-0 fw-bold">@cambio.Usuario</h6>
                                        <span class="badge rounded-pill border border-secondary-subtle text-secondary fw-normal">
                                            <i class="bi bi-clock me-1"></i> @cambio.FechaRelativa
                                        </span>
                                    </div>
                                    <p class="mb-1 text-body-secondary small">@cambio.Accion</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card border-secondary shadow-sm h-100">
                <div class="card-header border-secondary bg-transparent py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle me-2 text-warning"></i>Atención Requerida
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.PedidosEstancados.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-check2-circle fs-1 text-success opacity-50"></i>
                            <p class="text-muted mt-2">Todo al día. No hay pedidos demorados.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var pedido in Model.PedidosEstancados)
                        {
                            <div class="alert bg-body-tertiary border-@pedido.ClaseColor border-start border-1 mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>Pedido #@pedido.PedidoId</strong>
                                    <span class="badge bg-@pedido.ClaseColor">@pedido.HorasTranscurridas.ToString("0") hs</span>
                                </div>
                                <div class="small text-muted mb-2">Cliente: @pedido.Cliente</div>
                                <div class="d-flex justify-content-end">
                                    <a asp-area="" asp-controller="Pedido" asp-action="Detalles" asp-route-id="@pedido.PedidoId" class="btn btn-sm btn-outline-primary">
                                        Revisar Ahora
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>