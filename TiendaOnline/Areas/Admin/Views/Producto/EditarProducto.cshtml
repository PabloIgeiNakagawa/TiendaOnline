@model TiendaOnline.Domain.Entities.Producto
@{
    ViewData["Title"] = $"Editar - {Model.Nombre}";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-house-door"></i> Inicio
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Admin" asp-action="Productos"  class="text-decoration-none">Productos</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Producto" asp-action="Detalles" asp-route-id="@Model.ProductoId" class="text-decoration-none">@Model.Nombre</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
    </nav>

    <div class="mx-auto rounded-3 shadow overflow-hidden" style="max-width: 800px;">
        <!-- Header -->
        <div class="bg-success text-white py-4 px-3 text-center">
            <h2 class="mb-2">
                <i class="bi bi-pencil-square me-2"></i>
                Editar Producto
            </h2>
            <p class="mb-0 opacity-75">Modifique la información del producto</p>
        </div>

        <!-- Formulario -->
        <div class="p-4">
            <form asp-action="EditarProducto" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input asp-for="ProductoId" type="hidden" />

                <!-- Información básica -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="text-success mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            Información Básica
                        </h5>
                    </div>
                </div>

                <!-- Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">
                        <i class="bi bi-box me-1"></i>Nombre del Producto
                    </label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">
                        <i class="bi bi-card-text me-1"></i>Descripción
                    </label>
                    <textarea asp-for="Descripcion" class="form-control" style="height: 120px" required></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Categoría -->
                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label">
                        <i class="bi bi-tag me-1"></i>Categoría
                    </label>
                    <select asp-for="CategoriaId"
                            asp-items="@(new SelectList(ViewBag.Categorias, "CategoriaId", "Nombre", Model.CategoriaId))"
                            class="form-select"
                            required>
                        <option value="">Seleccione una categoría</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <!-- Precio y Stock -->
                <div class="row mb-4 mt-4">
                    <div class="col-12">
                        <h5 class="text-success mb-3">
                            <i class="bi bi-currency-dollar me-2"></i>
                            Precio y Inventario
                        </h5>
                    </div>
                </div>

                <div class="row">
                    <!-- Precio -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Precio" class="form-label">
                            <i class="bi bi-currency-dollar me-1"></i>Precio (ARS)
                        </label>
                        <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control" required />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <!-- Stock -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Stock" class="form-label">
                            <i class="bi bi-boxes me-1"></i>Stock Actual
                        </label>
                        <input asp-for="Stock" type="number" min="0" class="form-control" required />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                </div>

                <!-- Imagen -->
                <div class="row mb-4 mt-4">
                    <div class="col-12">
                        <h5 class="text-success mb-3">
                            <i class="bi bi-image me-2"></i>
                            Imagen del Producto
                        </h5>
                    </div>
                </div>

                <div class="row">
                    <!-- Imagen actual -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label">
                            <i class="bi bi-image-fill me-1"></i>Imagen Actual
                        </label>
                        <div>
                            <div class="position-relative d-inline-block">
                                <img src=@Model.ImagenUrl
                                     class="img-fluid my-3 rounded-3 shadow-sm border border-2 border-light-subtle d-block object-fit-cover"
                                     style="max-width: 200px; max-height: 200px;"
                                     alt="@Model.Nombre" />
                            </div>
                            <div class="form-text text-success">
                                <i class="bi bi-info-circle me-1"></i>
                                Imagen cargada correctamente
                            </div>
                        </div>
                    </div>

                    <!-- Nueva imagen -->
                    <div class="col-md-6 mb-3">
                        <label for="ImagenArchivo" class="form-label">
                            <i class="bi bi-upload me-1"></i>Cambiar Imagen
                        </label>
                        <input type="file" name="ImagenArchivo" id="ImagenArchivo" class="form-control" accept="image/*" />
                        <div class="form-text">Formatos permitidos: JPG, PNG, JPEG</div>

                        <img id="imagePreview"
                             class="d-none img-fluid my-3 rounded-3 shadow-sm border border-2 border-success"
                             style="max-width: 200px; max-height: 200px; object-fit: cover;"
                             alt="Nueva imagen" />

                        <div class="alert alert-info rounded-2 p-2 mt-2 small">
                            <i class="bi bi-lightbulb me-1"></i>
                            <strong>Nota:</strong> Si no selecciona una nueva imagen, se mantendrá la imagen actual.
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="d-flex flex-column flex-md-row gap-3 justify-content-md-end">

                            <a asp-controller="Admin" asp-action="Productos"
                               class="btn btn-outline-secondary d-inline-flex align-items-center justify-content-center">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>

                            <a asp-controller="Producto" asp-action="Detalles" asp-route-id="@Model.ProductoId"
                               class="btn btn-outline-info d-inline-flex align-items-center justify-content-center">
                                <i class="bi bi-eye me-2"></i>Ver Detalle
                            </a>

                            <button type="submit" class="btn btn-success d-inline-flex align-items-center justify-content-center">
                                <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                            </button>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Solo vista previa de nueva imagen
        document.addEventListener('DOMContentLoaded', function () {
            const imagenInput = document.getElementById('ImagenArchivo');
            const imagePreview = document.getElementById('imagePreview');

            if (imagenInput && imagePreview) {
                imagenInput.addEventListener('change', function () {
                    const file = this.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            imagePreview.src = e.target.result;
                            imagePreview.style.display = 'block';
                        };
                        reader.readAsDataURL(file);
                    } else {
                        imagePreview.style.display = 'none';
                    }
                });
            }
        });
    </script>
}
