@model TiendaOnline.Areas.Admin.ViewModels.Auditoria.LogsViewModel
@{
    ViewData["Title"] = "Auditoría del Sistema";
}

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold">
                        <i class="bi bi-shield-check me-2 text-primary"></i>
                        Auditoría del Sistema
                    </h2>
                    <p class="text-muted mb-0">Registro completo de todas las acciones realizadas en el sistema</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <form method="get" asp-area="Admin" asp-controller="Auditoria" asp-action="Logs">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card rounded-3 shadow-sm border-0">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label class="form-label fw-bold text-muted small">Mostrar</label>
                                <select name="tamanoPagina" class="form-select" onchange="this.form.submit()">
                                    @{
                                        int[] opciones = { 10, 25, 50, 75, 100 };
                                        foreach (var cantidad in opciones)
                                        {
                                            <option value="@cantidad" selected="@(Model.Paginacion.RegistrosPorPagina == cantidad ? "selected" : null)">
                                                @cantidad registros
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-search me-1"></i>Búsqueda
                                </label>
                                <input type="text" name="busqueda" value="@Model.Busqueda" class="form-control" placeholder="Usuario, tabla o acción...">
                            </div>

                            <div class="col-md-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Desde
                                </label>
                                <input type="date" name="fechaDesde" class="form-control">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Hasta
                                </label>
                                <input type="date" name="fechaHasta" class="form-control">
                            </div>

                            <div class="col-md-3 d-flex align-items-end gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-filter me-1"></i>Filtrar
                                </button>

                                <a asp-area="Admin" asp-controller="Auditoria" asp-action="Logs"
                                   class="btn btn-outline-secondary flex-fill">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Resumen resultados -->
    <div class="d-flex justify-content-between align-items-center mb-3 px-1">
        <div class="text-muted small">
            @if (Model.Paginacion.TotalRegistros > 0)
            {
                var desde = (Model.Paginacion.PaginaActual - 1) * Model.Paginacion.RegistrosPorPagina + 1;
                var hasta = Math.Min(Model.Paginacion.PaginaActual * Model.Paginacion.RegistrosPorPagina, Model.Paginacion.TotalRegistros);

                <span>
                    Mostrando <strong>@desde</strong> a <strong>@hasta</strong> de
                    <strong>@Model.Paginacion.TotalRegistros</strong> resultados encontrados
                </span>
            }
            else
            {
                <span>No se encontraron resultados para los filtros aplicados.</span>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.Busqueda))
        {
            <span class="text-muted small">
                <i class="bi bi-info-circle me-1 text-primary"></i>
                Filtrado por: "<strong>@Model.Busqueda</strong>"
            </span>
        }
    </div>

    <!-- Tabla de Auditoría -->
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3 shadow border-0 px-3">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaAuditoria">
                            <thead>
                                <tr>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-clock me-2 text-primary"></i>
                                            Fecha y Hora
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person me-2 text-primary"></i>
                                            Usuario
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-activity me-2 text-primary"></i>
                                            Acción
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Paginacion.Items)
                                {
                                    <tr>
                                        <td class="py-3">
                                            <div class="d-flex flex-column">
                                                <span class="fw-semibold">@item.Fecha.ToString("dd/MM/yyyy")</span>
                                                <small class="text-muted">@item.Fecha.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div>
                                                <div class="fw-semibold">@item.UsuarioNombreCompleto</div>
                                                <small class="text-muted">@item.UsuarioEmail</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span class="badge bg-info px-3 py-2 rounded-pill small fw-medium">@item.Accion</span>
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <button class="btn btn-sm btn-primary" onclick="verDetalle('@item.AuditoriaId')">
                                                    <i class="bi bi-eye me-1"></i> Ver Cambios
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <nav class="mt-3">
                            <ul class="pagination justify-content-end">
                                <li class="page-item @(Model.Paginacion.PaginaActual == 1 ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-area="Admin"
                                       asp-controller="Auditoria"
                                       asp-action="Logs"
                                       asp-route-pagina="@(Model.Paginacion.PaginaActual - 1)"
                                       asp-route-tamanoPagina="@Model.Paginacion.RegistrosPorPagina"
                                       asp-route-busqueda="@Model.Busqueda"
                                       asp-route-fechaDesde="@Context.Request.Query["fechaDesde"]"
                                       asp-route-fechaHasta="@Context.Request.Query["fechaHasta"]">
                                        Anterior
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.Paginacion.TotalPaginas; i++)
                                {
                                    <li class="page-item @(i == Model.Paginacion.PaginaActual ? "active" : "")">
                                        <a class="page-link"
                                           asp-area="Admin"
                                           asp-controller="Auditoria"
                                           asp-action="Logs"
                                           asp-route-pagina="@i"
                                           asp-route-tamanoPagina="@Model.Paginacion.RegistrosPorPagina"
                                           asp-route-busqueda="@Model.Busqueda"
                                           asp-route-fechaDesde="@Context.Request.Query["fechaDesde"]"
                                           asp-route-fechaHasta="@Context.Request.Query["fechaHasta"]">
                                            @i
                                        </a>
                                    </li>
                                }

                                <li class="page-item @(Model.Paginacion.PaginaActual == Model.Paginacion.TotalPaginas ? "disabled" : "")">
                                    <a class="page-link"
                                       asp-area="Admin"
                                       asp-controller="Auditoria"
                                       asp-action="Logs"
                                       asp-route-pagina="@(Model.Paginacion.PaginaActual + 1)"
                                       asp-route-tamanoPagina="@Model.Paginacion.RegistrosPorPagina"
                                       asp-route-busqueda="@Model.Busqueda"
                                       asp-route-fechaDesde="@Context.Request.Query["fechaDesde"]"
                                       asp-route-fechaHasta="@Context.Request.Query["fechaHasta"]">
                                        Siguiente
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de detalle de los cambios -->
<div class="modal fade" id="modalCambios" tabindex="-1" aria-labelledby="etiquetaModalCambios" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="etiquetaModalCambios">
                    <i class="bi bi-file-diff me-2"></i>Detalles de los Cambios
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-arrow-left-circle me-2"></i>Datos Anteriores
                        </h6>
                        <div class="bg-body-secondary p-3 rounded"> 
                            <pre id="datosAnteriores" class="small lh-sm mb-0" style="white-space: pre-wrap;"></pre>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-arrow-right-circle me-2"></i>Datos Nuevos
                        </h6>
                        <div class="bg-body-secondary p-3 rounded">
                            <pre id="datosNuevos" class="small lh-sm mb-0" style="white-space: pre-wrap;"></pre>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div> 

@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar tooltips
            var listaTooltips = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltips = listaTooltips.map(function (elementoTooltip) {
                return new bootstrap.Tooltip(elementoTooltip);
            });
        });

        function verDetalle(id) {
            const modal = new bootstrap.Modal(document.getElementById('modalCambios'));
            modal.show();

            document.getElementById('datosAnteriores').textContent = "Cargando...";
            document.getElementById('datosNuevos').textContent = "Cargando...";

            $.get("/Admin/Auditoria/ObtenerDetalle/" + id, function (data) {

                const formatearJSON = (jsonString) => {
                    if (!jsonString) return "Sin datos";
                    try {
                        const obj = typeof jsonString === 'string' ? JSON.parse(jsonString) : jsonString;
                        return JSON.stringify(obj, null, 2);
                    } catch (e) {
                        return jsonString;
                    }
                };

                document.getElementById('datosAnteriores').textContent = formatearJSON(data.datosAnteriores);
                document.getElementById('datosNuevos').textContent = formatearJSON(data.datosNuevos);
            }).fail(function () {
                alert("Error al cargar los detalles.");
            });
        }
    </script>
}
