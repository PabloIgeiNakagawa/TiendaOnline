<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin TechStore</title>

    <link rel="icon" type="image/x-icon" href="~/img/TechStore-Logo.png" asp-append-version="true">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .sidebar {
            width: 260px;
        }

        @@media (min-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                z-index: 1000;
            }

            .main-wrapper {
                margin-left: 260px;
            }
        }

        .sidebar nav {
            flex: 1 1 auto; /* Esto obliga al nav a ocupar todo el espacio disponible */
            overflow-x: hidden; /* Prohibimos el scroll hacia la derecha */
        }

        /* Rotación de flechitas */
        [data-bs-toggle="collapse"][aria-expanded="true"] .bi-chevron-down {
            transform: rotate(180deg);
            transition: 0.3s;
        }

        .bi-chevron-down {
            transition: 0.3s;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <aside class="sidebar offcanvas-md offcanvas-start bg-body-tertiary d-flex flex-column vh-100 border-end" id="sidebarAdmin">
        <div class="d-md-none p-3 text-end">
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarAdmin"></button>
        </div>

        <div class="p-4 d-flex align-items-center border-bottom border-light-subtle mb-3">
            <div class="rounded-3 p-2 me-3 d-flex align-items-center justify-content-center shadow-sm">
                <img src="~/img/TechStore-Logo.png" alt="Logo" width="30" height="30" asp-append-version="true" />
            </div>
            <div class="overflow-hidden">
                <h6 class="fw-bold mb-0 text-uppercase tracking-wider">TechStore</h6>
                <small class="text-secondary text-uppercase fw-semibold" style="font-size: 0.65rem; letter-spacing: 1px;">Admin Panel</small>
            </div>
        </div>

        <nav class="nav flex-column flex-nowrap overflow-y-auto overflow-x-hidden w-100 px-3" style="flex: 1;">

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex align-items-center bg-body-secondary-hover" asp-controller="HomeAdmin" asp-action="Index">
                    <i class="bi bi-house-door me-2 text-primary"></i>
                    <span>Inicio</span>
                </a>
            </div>

            <small class="text-uppercase text-muted fw-bold mt-3 mb-2 ps-3" style="font-size: 0.7rem;">Gestión de Tienda</small>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuReportes" role="button" aria-expanded="false">
                    <span><i class="bi bi-bar-chart-line me-2 text-primary"></i> Reportes</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuReportes">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Reportes" asp-action="Dashboard">Dashboard General</a>
                    </div>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuProducto" role="button" aria-expanded="false">
                    <span><i class="bi bi-box-seam me-2 text-primary"></i> Productos</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuProducto">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Productos" asp-action="Catalogo">Ver Catálogo</a>
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Productos" asp-action="AgregarProducto">Nuevo Producto</a>
                    </div>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuCategorias" role="button" aria-expanded="false">
                    <span><i class="bi bi-tags me-2 text-primary"></i> Categorías</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuCategorias">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Categorias" asp-action="Listado">Listado</a>
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Categorias" asp-action="AgregarCategoria">Nueva Categoría</a>
                    </div>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuUsuarios" role="button" aria-expanded="false">
                    <span><i class="bi bi-people me-2 text-primary"></i> Usuarios</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuUsuarios">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Usuarios" asp-action="Listado">Listado</a>
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Usuarios" asp-action="CrearUsuario">Nuevo Usuario</a>
                    </div>
                </div>
            </div>

            <small class="text-uppercase text-muted fw-bold mt-3 mb-2 ps-3" style="font-size: 0.7rem;">Operaciones</small>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuPedidos" role="button" aria-expanded="false">
                    <span><i class="bi bi-cart-check me-2 text-primary"></i> Pedidos</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuPedidos">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Pedidos" asp-action="Listado">Ver Todos</a>
                    </div>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuAuditoria" role="button" aria-expanded="false">
                    <span><i class="bi bi-shield-check me-2 text-primary"></i> Auditoría</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuAuditoria">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="Auditorias" asp-action="Logs">Registros de Sistema</a>
                    </div>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 link-body-emphasis d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuMovimientos" role="button" aria-expanded="false">
                    <span><i class="bi bi-arrow-left-right me-2 text-primary"></i> Stock</span>
                    <i class="bi bi-chevron-down small opacity-50"></i>
                </a>
                <div class="collapse" id="menuMovimientos">
                    <div class="nav flex-column ms-3 border-start ps-2 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-secondary small rounded-2" asp-controller="MovimientosStock" asp-action="Movimientos">Movimientos</a>
                    </div>
                </div>
            </div>
        </nav>
    </aside>

    <div class="main-wrapper">
        <header class="navbar navbar-expand bg-body border-bottom sticky-top p-0 shadow-sm" style="height: 70px;">
            <div class="container-fluid px-4">
                <button class="btn d-md-none me-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarAdmin">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <nav aria-label="breadcrumb" class="d-none d-sm-block">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted small">Administración</a></li>
                        <li class="breadcrumb-item active fw-bold small text-primary" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>

                <div class="ms-auto d-flex align-items-center gap-2">
                    <button id="btn-theme" class="btn nav-link text-body px-2" title="Cambiar tema">
                        <i id="theme-icon" class="bi bi-sun fs-4"></i>
                    </button>

                    <div class="dropdown">
                        <button class="btn d-flex align-items-center gap-2 border-0 p-1 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <p class="mb-0 small fw-bold text-body-emphasis lh-1 me-2">Admin TechStore</p>
                            <i class="bi bi-person-circle fs-2 text-primary"></i>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3 mt-2">
                            <li><h6 class="dropdown-header">Mi Cuenta</h6></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door text-secondary"></i> Volver al Sitio
                                </a>
                            </li>
                            <li><hr class="dropdown-divider opacity-50"></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2 py-2 text-danger" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-power"></i> Cerrar Sesión
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <main class="container-fluid p-4">
            @await Html.PartialAsync("_MensajeTempData")
            <div class="bg-body border rounded-4 p-4 shadow-sm min-vh-100">
                @RenderBody()
            </div>
        </main>
    </div>

    
</body>
</html><script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)