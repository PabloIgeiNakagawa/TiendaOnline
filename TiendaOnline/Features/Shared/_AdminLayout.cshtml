<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin TechStore</title>

    <link rel="icon" type="image/x-icon" href="~/img/TechStore-Logo.png" asp-append-version="true">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .sidebar {
            width: 260px;
        }

        @@media (min-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                z-index: 1000;
            }

            .main-wrapper {
                margin-left: 260px;
            }
        }

        .sidebar nav {
            flex: 1 1 auto; /* Esto obliga al nav a ocupar todo el espacio disponible */
            overflow-x: hidden; /* Prohibimos el scroll hacia la derecha */
        }

        /* Rotación de flechitas */
        [data-bs-toggle="collapse"][aria-expanded="true"] .bi-chevron-down {
            transform: rotate(180deg);
            transition: 0.3s;
        }

        .bi-chevron-down {
            transition: 0.3s;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <aside class="sidebar offcanvas-md offcanvas-start bg-body-tertiary d-flex flex-column vh-100 border-end" id="sidebarAdmin">
        <div class="d-md-none p-3 text-end">
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarAdmin"></button>
        </div>
        <div class="p-4 mb-2 d-flex flex-column align-items-center text-center">
            <img src="~/img/TechStore-Logo.png" alt="TechStore Logo" width="50" height="50" asp-append-version="true" loading="eager" class="img-fluid mb-2" />
            <h5 class="fw-bold mb-0 text-uppercase mt-2">Panel de control</h5>
        </div>

        <nav class="nav flex-column flex-nowrap overflow-y-auto overflow-x-hidden w-100" style="flex: 1;">
            <!-- Inicio -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <span><i class="bi bi-house-door me-2 "></i> Inicio</span>
                </a>
            </div>
            <!-- Reportes -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center"
                    data-bs-toggle="collapse" href="#menuReportes" role="button" aria-expanded="false">
                    <span><i class="bi bi-grid-1x2 me-2"></i> Reportes</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuReportes">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Reportes" asp-action="Dashboard">Dashboard</a>
                    </div>
                </div>
            </div>
            <!-- Productos -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center"
                    data-bs-toggle="collapse" href="#menuProducto" role="button" aria-expanded="false">
                    <span><i class="bi bi-box-seam me-2"></i> Productos</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuProducto">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Productos" asp-action="Catalogo">Catálogo</a>
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Productos" asp-action="AgregarProducto">Nuevo Producto</a>
                    </div>
                </div>
            </div>
            <!-- Categorias -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center" 
                   data-bs-toggle="collapse" href="#menuCategorias" role="button" aria-expanded="false">
                    <span><i class="bi bi-tags me-2"></i> Categorías</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuCategorias">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Categorias" asp-action="Listado">Listado</a>
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Categorias" asp-action="AgregarCategoria">Nueva Categoría</a>
                    </div>
                </div>
            </div>
            <!-- Usuarios -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center" 
                   data-bs-toggle="collapse" href="#menuUsuarios" role="button" aria-expanded="false">
                    <span><i class="bi bi-people me-2"></i> Usuarios</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuUsuarios">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Usuarios" asp-action="Listado">Listado</a>
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Usuarios" asp-action="CrearUsuario">Nuevo Usuario</a>
                    </div>
                </div>
            </div>
            <!-- Pedidos -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center" 
                   data-bs-toggle="collapse" href="#menuPedidos" role="button" aria-expanded="false">
                    <span><i class="bi bi-cart-check me-2"></i> Pedidos</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuPedidos">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Pedidos" asp-action="Listado">Listado</a>
                    </div>
                </div>
            </div>
            <!-- Auditoría -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuAuditoria" role="button" aria-expanded="false">
                    <span><i class="bi-clipboard-check me-2"></i> Auditoría</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuAuditoria">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="Auditorias" asp-action="Logs">Logs</a>
                    </div>
                </div>
            </div>
            <!-- Movimientos stock -->
            <div class="nav-item mx-3">
                <a class="nav-link py-2 px-3 my-1 fw-medium rounded-2 text-body d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#menuMovimientos" role="button" aria-expanded="false">
                    <span><i class="bi bi-arrow-left-right me-2"></i> Movimientos</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse" id="menuMovimientos">
                    <div class="nav flex-column ms-4 border-start ps-3 mb-2">
                        <a class="nav-link py-1 px-3 my-1 text-body-secondary small" asp-controller="MovimientosStock" asp-action="Movimientos">Movimientos</a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="p-3 border-top border-secondary mt-auto">
            <a class="nav-link py-2 px-3 my-1 mx-3 fw-medium rounded-2 text-danger" asp-area="" asp-controller="Account" asp-action="Logout">
                <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
            </a>
            <a class="nav-link py-2 px-3 my-1 mx-3 fw-medium rounded-2 text-danger" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-box-arrow-left me-2"></i> Salir al Sitio
            </a>
        </div>
    </aside>

    <div class="main-wrapper">
        <header class="navbar navbar-expand bg-body-tertiary border-bottom sticky-top p-3">
            <div class="container-fluid">
                <button class="btn btn-outline-secondary d-md-none me-2 border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarAdmin">
                    <i class="bi bi-list fs-3"></i>
                </button>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item text-muted">Admin</li>
                        <li class="breadcrumb-item active fw-semibold">@ViewData["Title"]</li>
                    </ol>
                </nav>
                <div class="ms-auto d-flex align-items-center">
                    <button class="btn border-0 bg-transparent d-flex align-items-center px-3 mx-2 text-body" id="bd-theme" type="button" onclick="toggleTheme()">
                        <i id="theme-icon" class="bi bi-sun fs-4"></i>
                        <span id="modo-actual" class="ms-2 fw-medium d-none d-md-inline">Claro</span>
                    </button>

                    <span class="ms-2 me-3 d-none d-sm-inline text-muted small">Hola, Administrador</span>
                    <i class="bi bi-person-circle fs-4 text-primary"></i>
                </div>
            </div>
        </header>

        <main class="container-fluid p-4">
            @RenderBody()
        </main>
    </div>

    
</body>
</html><script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)