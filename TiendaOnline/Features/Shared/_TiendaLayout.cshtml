@using System.Security.Claims
@using TiendaOnline.Helpers
@using TiendaOnline.Services.DTOs
@{
    var idUsuario = User?.FindFirstValue(ClaimTypes.NameIdentifier);
    bool usuarioEstaAutenticado = User.Identity.IsAuthenticated;
    var carritoLayout = Context.Session.GetObject<List<ItemCarrito>>("Carrito") ?? new List<ItemCarrito>();

    var conteoProductos = carritoLayout.Sum(i => i.Cantidad);
}
<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="TechStore PC - Tu tienda de componentes">
    <meta property="og:description" content="Encuentra el mejor hardware para tu setup.">
    <meta property="og:image" content="~/img/TechStore-Logo.png">
    <meta property="og:type" content="website">
    <title>@ViewData["Title"] - TechStore PC</title>

    <meta name="description" content="Tu tienda de confianza para componentes de PC">
    <link rel="icon" type="image/x-icon" href="~/img/TechStore-Logo.png" asp-append-version="true">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="dns-prefetch" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <!-- Modo oscuro y claro -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="h-100 d-flex flex-column">
    <header class="shadow-sm bg-body">
        <div class="container py-3">
            <div class="row align-items-center gy-3">

                <div class="col-6 col-lg-3 d-flex justify-content-start">
                    <a class="d-flex align-items-center text-decoration-none" asp-action="Index" title="Ir al inicio">
                        <img src="~/img/TechStore-Logo.png" alt="TechStore Logo" width="50" height="50" asp-append-version="true" loading="eager" class="img-fluid" />
                    </a>
                </div>

                <div class="col-12 col-lg-6 order-3 order-lg-2">
                    <form class="w-100" method="get" asp-controller="Productos" asp-action="Index">
                        <div class="input-group shadow-sm rounded-2 overflow-hidden border-0">
                            <span class="input-group-text bg-body-secondary border-0 ps-3">
                                <i class="bi bi-search text-secondary"></i>
                            </span>

                            <input class="form-control bg-body-secondary border-0 py-2 shadow-none"
                                   type="search"
                                   name="busqueda"
                                   placeholder="Buscar procesadores, gráficas, memorias..."
                                   aria-label="Buscar"
                                   style="font-size: 0.95rem;">

                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>

                <div class="col-6 col-lg-3 order-2 order-lg-3 d-flex justify-content-end align-items-center gap-2">

                    <a class="nav-link text-body position-relative px-2" asp-controller="Carritos" asp-action="Index">
                        <i class="bi bi-cart3 fs-4"></i>
                        @if (conteoProductos > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                                @conteoProductos
                            </span>
                        }
                    </a>

                    <button class="btn nav-link text-body px-2" onclick="toggleTheme()" title="Cambiar tema">
                        <i id="theme-icon" class="bi bi-sun fs-4"></i>
                    </button>
                    
                    <div class="dropdown">
                        <button class="btn nav-link px-2 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person fs-3"></i>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3 mt-3 p-2" style="min-width: 200px;">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><h6 class="dropdown-header text-uppercase fw-bold small">Mi Cuenta</h6></li>

                                <li>
                                    <a class="dropdown-item rounded-2 py-2" asp-controller="Usuarios" asp-action="PerfilUsuario" asp-route-id="@idUsuario">
                                        <i class="bi bi-person me-2"></i>Mi Perfil
                                    </a>
                                </li>

                                @if (User.IsInRole("Administrador"))
                                {
                                    <li><hr class="dropdown-divider mx-2"></li>
                                    <li><h6 class="dropdown-header text-uppercase fw-bold small text-primary">Gestión</h6></li>
                                    <li>
                                        <a class="dropdown-item rounded-2 py-2 fw-semibold" asp-controller="HomeAdmin" asp-action="Index">
                                            <i class="bi bi-shield-lock me-2"></i>Panel Admin
                                        </a>
                                    </li>
                                }
                                else if (User.IsInRole("Repartidor"))
                                {
                                    <li><hr class="dropdown-divider mx-2"></li>
                                    <li>
                                        <a class="dropdown-item rounded-2 py-2" asp-controller="Admin" asp-action="Pedidos">
                                            <i class="bi bi-truck me-2"></i>Pedidos Asignados
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item rounded-2 py-2" asp-controller="Pedidos" asp-action="MisPedidos">
                                            <i class="bi bi-bag-check me-2"></i>Mis Pedidos
                                        </a>
                                    </li>
                                }

                                <li><hr class="dropdown-divider mx-2"></li>
                                <li>
                                    <a class="dropdown-item rounded-2 py-2 text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li><h6 class="dropdown-header text-uppercase fw-bold small">Bienvenido</h6></li>
                                <li>
                                    <a class="dropdown-item rounded-2 py-2" asp-controller="Account" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Ingresar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item rounded-2 py-2" asp-controller="Account" asp-action="Register">
                                        <i class="bi bi-person-plus me-2"></i>Registrarse
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>

                    <button class="btn btn-link text-body d-lg-none text-decoration-none p-2" type="button" data-bs-toggle="collapse" data-bs-target="#navegacionInferior">
                        <i class="bi bi-list fs-1"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="border-top bg-body-tertiary">
            <div class="container">
                <div class="collapse navbar-collapse d-lg-flex justify-content-center" id="navegacionInferior">
                    <ul class="navbar-nav flex-row gap-3 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold px-3 text-body-secondary" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold px-3 text-body-secondary" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold px-3 text-body-secondary" asp-controller="Soporte" asp-action="FAQ">FAQ</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        <div class="container">
            @await Html.PartialAsync("_MensajeTempData")
            @RenderBody()
        </div>
    </main>

    <footer class="border-top mt-auto pt-5 pb-4">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6">
                    <div class="d-flex align-items-center justify-content-center justify-content-md-start mb-3">
                        <img src="~/img/TechStore-Logo.png" alt="TechStore Logo" width="30" height="30" asp-append-version="true" class="img-fluid me-2" />
                        <small class="fw-bold small text-uppercase text-center text-md-start" style="letter-spacing: 1px;">Expertos en componentes de PC</small>
                    </div>
                    <p class="text-secondary small mb-4 text-center text-md-start">
                        Tu tienda de confianza para armar la PC de tus sueños. Componentes de alto rendimiento y asesoramiento especializado.
                    </p>
                    <div class="d-flex gap-3 justify-content-center justify-content-md-start">
                        <a href="#" class="btn btn-sm rounded-circle shadow-sm"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-sm rounded-circle shadow-sm"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="btn btn-sm rounded-circle shadow-sm"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="btn btn-sm rounded-circle shadow-sm"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold mb-3 small text-uppercase text-center text-md-start" style="letter-spacing: 1px;">Navegación</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2 text-center text-md-start"><a href="/" class="text-secondary text-decoration-none">Inicio</a></li>
                        <li class="mb-2 text-center text-md-start"><a href="/Producto" class="text-secondary text-decoration-none">Productos</a></li>
                        <li class="mb-2 text-center text-md-start"><a href="#" class="text-secondary text-decoration-none">Promociones</a></li>
                        <li class="mb-2 text-center text-md-start"><a href="#" class="text-secondary text-decoration-none">Contacto</a></li>
                        <li class="mb-2 text-center text-md-start"><a href="/Home/Privacy" class="text-secondary text-decoration-none">Privacidad</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold mb-3 small text-uppercase text-center text-md-start" style="letter-spacing: 1px;">Aceptamos</h6>
                    <div class="d-flex flex-wrap gap-2 fs-3 text-secondary justify-content-center justify-content-md-start">
                        <i class="bi bi-credit-card"></i>
                        <i class="bi bi-paypal"></i>
                        <i class="bi bi-bank"></i>
                    </div>
                    <p class="small text-secondary mt-3 text-center text-md-start">
                        <i class="bi bi-truck me-2"></i>Envíos a todo el país.
                    </p>
                </div>

                <div class="col-lg-3 col-md-4">
                    <h6 class="fw-bold mb-3 small text-uppercase text-center text-md-start" style="letter-spacing: 1px;">Soporte</h6>
                    <ul class="list-unstyled footer-contact">
                        <li class="d-flex align-items-center mb-3 justify-content-center justify-content-md-start">
                            <div class="contact-icon me-2"><i class="bi bi-envelope text-info "></i></div>
                            <span class="small">soporte@techstore.com</span>
                        </li>
                        <li class="d-flex align-items-center mb-3 justify-content-center justify-content-md-start">
                            <div class="contact-icon me-2"><i class="bi bi-whatsapp text-success"></i></div>
                            <span class="small">+54 11 1234-5678</span>
                        </li>
                        <li class="d-flex align-items-center justify-content-center justify-content-md-start">
                            <div class="contact-icon me-2"><i class="bi bi-geo-alt"></i></div>
                            <span class="small">Buenos Aires, Argentina</span>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 border-secondary opacity-25">

            <div class="text-center fw-bold">
                &copy; 2026 TechStore PC. Todos los derechos reservados.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
