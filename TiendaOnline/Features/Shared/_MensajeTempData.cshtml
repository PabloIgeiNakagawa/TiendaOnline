@{
    var mensajeExito = TempData["MensajeExito"];
    var mensajeError = TempData["MensajeError"];
}

@if (mensajeExito != null)
{
    <div class="row my-2">
        <div class="col-12">
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 border-start border-4 rounded-3 d-flex align-items-center gap-2" role="alert">
                <i class="bi bi-check-circle-fill me-2 fs-5"></i>
                @mensajeExito
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>
}
else if (mensajeError != null)
{
    <div class="row my-2">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 border-start border-4 rounded-3 d-flex align-items-center gap-2" role="alert">
                <i class="bi bi-x-circle-fill me-2 fs-5"></i>
                @mensajeError
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        </div>
    </div>
}
