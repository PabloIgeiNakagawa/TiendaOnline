@using TiendaOnline.Features.Tienda.Account
@model RegisterViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <!-- Encabezado -->
            <div class="text-center">
                <div class="d-flex align-items-center justify-content-center mx-auto mb-3 text-white fs-2 rounded-4 bg-primary " style="width: 80px; height: 80px;">
                    <i class="bi bi-person-plus-fill"></i>
                </div>
                <h2 class="fw-bold mb-2">Registrarse</h2>
                <p class="text-muted">Complete sus datos para crear su cuenta en TechStore</p>
            </div>

            <!-- Formulario -->
            <div class="shadow border-0 rounded-4 overflow-hidden">
                <div class="p-5">
                    <form asp-action="Register" method="post" id="formularioRegistro" novalidate>
                        @Html.AntiForgeryToken()

                        <!-- Información Personal -->
                        <div class="position-relative mb-4">
                            <h6 class="border-bottom mb-3 text-secondary fw-semibold small text-uppercase pb-2" style="letter-spacing: 0.5px;">
                                <i class="bi bi-person-circle me-2"></i>Información Personal
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Nombre" class="form-control border-1" id="campoNombre" placeholder="Nombre" required />
                                        <label for="campoNombre">
                                            <i class="bi bi-person me-1"></i>Nombre
                                        </label>
                                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Apellido" class="form-control" id="campoApellido" placeholder="Apellido" required />
                                        <label for="campoApellido">
                                            <i class="bi bi-person me-1"></i>Apellido
                                        </label>
                                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="FechaNacimiento" class="form-control" id="campoFechaNacimiento" type="date" placeholder="Fecha de Nacimiento" required />
                                        <label for="campoFechaNacimiento">
                                            <i class="bi bi-calendar me-1"></i>Fecha de Nacimiento
                                        </label>
                                        <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Telefono" class="form-control" id="campoTelefono" placeholder="Teléfono" required />
                                        <label for="campoTelefono">
                                            <i class="bi bi-telephone me-1"></i>Teléfono
                                        </label>
                                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información de Contacto -->
                        <div class="seccion-formulario mb-4">
                            <h6 class="border-bottom mb-3 text-secondary fw-semibold small text-uppercase pb-2" style="letter-spacing: 0.5px;">
                                <i class="bi bi-envelope-at me-2"></i>Información de Contacto
                            </h6>
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control" id="campoEmail" type="email" placeholder="Correo Electrónico" required />
                                        <label for="campoEmail">
                                            <i class="bi bi-envelope me-1"></i>Correo Electrónico
                                        </label>
                                        <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Seguridad -->
                        <div class="seccion-formulario mb-4">
                            <h6 class="border-bottom mb-3 text-secondary fw-semibold small text-uppercase pb-2" style="letter-spacing: 0.5px;">
                                <i class="bi bi-shield-lock me-2"></i>Seguridad
                            </h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="Contrasena" type="password" class="form-control" id="campoContrasena" placeholder="Contraseña" required />
                                        <label for="campoContrasena">
                                            <i class="bi bi-lock me-1"></i>Contraseña
                                        </label>
                                        <span asp-validation-for="Contrasena" class="text-danger small d-block mt-1"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="ConfirmarContrasena" type="password" class="form-control" id="campoConfirmarContrasena" placeholder="Confirmar Contraseña" required />
                                        <label for="campoConfirmarContrasena">
                                            <i class="bi bi-lock-fill me-1"></i>Confirmar Contraseña
                                        </label>
                                        <span asp-validation-for="ConfirmarContrasena" class="text-danger small d-block mt-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Términos y Condiciones -->
                        <div class="seccion-formulario mb-4">
                            <div class="form-check">
                                <input class="" type="checkbox" id="aceptarTerminos" required>
                                <label class="form-check-label" for="aceptarTerminos">
                                    Acepto los <a href="#" class="fw-semibold text-decoration-none link-underline-opacity-100-hover">términos y condiciones</a> y la
                                    <a href="#" class="fw-semibold text-decoration-none link-underline-opacity-100-hover">política de privacidad</a>
                                </label>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-lg-flex justify-content-between gap-2 align-items-center pt-3 border-top">
                            <a asp-action="Login" class="btn btn-outline-info fw-medium rounded-3 d-block" my-2 my-lg-0>
                                <i class="bi bi-box-arrow-in-right me-1"></i>¿Ya tienes cuenta?
                            </a>
                            <a id="btnLimpiar"
                               class="btn btn-outline-secondary fw-medium rounded-3 my-2 my-lg-0 d-block">
                                <i class="bi bi-arrow-clockwise me-2"></i>Limpiar
                            </a>
                            <button type="submit" class="btn btn-primary fw-medium rounded-3 my-2 my-lg-0" id="botonEnviar">
                                <i class="bi bi-check-circle me-2"></i>
                                <span class="texto-boton">Crear Cuenta</span>
                                <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Features/Account/Register.js" asp-append-version="true"></script>
}
