@using TiendaOnline.Features.Admin.Auditorias
@model LogsViewModel

<div class="container-fluid py-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold">
                        <i class="bi bi-shield-check me-2 text-primary"></i>
                        Auditoría del Sistema
                    </h2>
                    <p class="text-muted mb-0">Registro completo de todas las acciones realizadas en el sistema</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <form method="get" asp-action="Logs">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card rounded-3 shadow-sm border-0">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label class="form-label fw-bold text-muted small">Mostrar</label>
                                <select name="tamanoPagina" class="form-select" onchange="this.form.submit()">
                                    @{
                                        int[] opciones = { 10, 25, 50, 75, 100 };
                                        foreach (var cantidad in opciones)
                                        {
                                            <option value="@cantidad" selected="@(Model.Paginacion.RegistrosPorPagina == cantidad ? "selected" : null)">
                                                @cantidad registros
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-search me-1"></i>Búsqueda
                                </label>
                                <input type="text" name="busqueda" value="@Model.Busqueda" class="form-control" placeholder="Usuario, tabla o acción...">
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Desde
                                </label>
                                <input type="date" name="fechaDesde" class="form-control">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold">
                                    <i class="bi bi-calendar me-1"></i>Hasta
                                </label>
                                <input type="date" name="fechaHasta" class="form-control">
                            </div>

                            <div class="col-md-3 d-flex align-items-end gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-filter me-1"></i>
                                </button>

                                <a asp-action="Logs" class="btn btn-outline-secondary flex-fill">
                                    <i class="bi bi-arrow-clockwise me-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Resumen resultados -->
    <div class="d-flex justify-content-between align-items-center mb-3 px-1">
        <div class="text-muted small">
            @if (Model.Paginacion.TotalRegistros > 0)
            {
                <span>
                    Mostrando <strong>@Model.Paginacion.DesdeRegistro</strong> a <strong>@Model.Paginacion.HastaRegistro</strong> de
                    <strong>@Model.Paginacion.TotalRegistros</strong> resultados encontrados
                </span>
            }
            else
            {
                <span>No se encontraron resultados para los filtros aplicados.</span>
            }
        </div>

        @if (!string.IsNullOrEmpty(Model.Busqueda))
        {
            <span class="text-muted small">
                <i class="bi bi-info-circle me-1 text-primary"></i>
                Filtrado por: "<strong>@Model.Busqueda</strong>"
            </span>
        }
    </div>

    <!-- Tabla de Auditoría -->
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3 shadow border-0 px-3">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="tablaAuditoria">
                            <thead>
                                <tr>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-clock me-2 text-primary"></i>
                                            Fecha y Hora
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person me-2 text-primary"></i>
                                            Usuario
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-activity me-2 text-primary"></i>
                                            Acción
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Paginacion.Items)
                                {
                                    <tr>
                                        <td class="py-3">
                                            <div class="d-flex flex-column">
                                                <span class="fw-semibold">@item.Fecha.ToString("dd/MM/yyyy")</span>
                                                <small class="text-muted">@item.Fecha.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div>
                                                <div class="fw-semibold">@item.UsuarioNombreCompleto</div>
                                                <small class="text-muted">@item.UsuarioEmail</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span class="badge bg-info px-3 py-2 rounded-pill small fw-medium">@item.Accion</span>
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <button class="btn btn-sm btn-primary btn-ver-detalle" data-id="@item.AuditoriaId">
                                                    <i class="bi bi-eye me-1"></i> Ver Cambios
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <nav aria-label="Navegación de auditoría" class="mt-3">
        <ul class="pagination justify-content-center justify-content-md-end mb-0">
            @{
                // Variables para simplificar la lectura
                int actual = Model.Paginacion.PaginaActual;
                int total = Model.Paginacion.TotalPaginas;
                int radio = 2;

                string fDesde = Context.Request.Query["fechaDesde"];
                string fHasta = Context.Request.Query["fechaHasta"];
            }

            @* Botón Anterior *@
            <li class="page-item @(actual == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Logs"
                   asp-route-pagina="@(actual - 1)"
                   asp-route-tamanoPagina="@Model.Paginacion.RegistrosPorPagina"
                   asp-route-busqueda="@Model.Busqueda"
                   asp-route-fechaDesde="@fDesde"
                   asp-route-fechaHasta="@fHasta">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @* Lógica de Números con Truncado *@
            @for (int i = 1; i <= total; i++)
            {
                // Condición de truncado: Primera, Última y rango de 2 alrededor de la actual
                if (i == 1 || i == total || (i >= actual - radio && i <= actual + radio))
                {
                    <li class="page-item @(i == actual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Logs"
                           asp-route-pagina="@i"
                           asp-route-tamanoPagina="@Model.Paginacion.RegistrosPorPagina"
                           asp-route-busqueda="@Model.Busqueda"
                           asp-route-fechaDesde="@fDesde"
                           asp-route-fechaHasta="@fHasta">
                            @i
                        </a>
                    </li>
                }
                // Mostrar puntos suspensivos
                else if (i == actual - radio - 1 || i == actual + radio + 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @* Botón Siguiente *@
            <li class="page-item @(actual == total ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Logs"
                   asp-route-pagina="@(actual + 1)"
                   asp-route-tamanoPagina="@Model.Paginacion.RegistrosPorPagina"
                   asp-route-busqueda="@Model.Busqueda"
                   asp-route-fechaDesde="@fDesde"
                   asp-route-fechaHasta="@fHasta">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>

<!-- Modal de detalle de los cambios -->
<div class="modal fade" id="modalCambios" tabindex="-1" aria-labelledby="etiquetaModalCambios" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="etiquetaModalCambios">
                    <i class="bi bi-file-diff me-2"></i>Detalles de los Cambios
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-arrow-left-circle me-2"></i>Datos Anteriores
                        </h6>
                        <div class="bg-body-secondary p-3 rounded"> 
                            <pre id="datosAnteriores" class="small lh-sm mb-0" style="white-space: pre-wrap;"></pre>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-arrow-right-circle me-2"></i>Datos Nuevos
                        </h6>
                        <div class="bg-body-secondary p-3 rounded">
                            <pre id="datosNuevos" class="small lh-sm mb-0" style="white-space: pre-wrap;"></pre>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-2" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div> 

@section Scripts {
    <script src="~/js/Features/Auditorias/Logs.js" asp-append-version="true"></script>
}
