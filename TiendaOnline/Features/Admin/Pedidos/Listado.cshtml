@using TiendaOnline.Features.Admin.Pedidos
@model PedidoListadoViewModel
@{
    var esAdmin = User.IsInRole("Administrador");
}

<div class="container-fluid py-4">
    <!-- Sección de Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 fw-bold">
                        <i class="bi bi-receipt me-2 text-primary"></i>
                        Gestión de Pedidos
                    </h2>
                    <p class="text-muted mb-0">Administra todos los pedidos del sistema</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3">
                        <form asp-action="Listado" method="get" class="row g-3">
                            <div class="col-md-2">
                                <label class="form-label fw-bold text-muted small">Mostrar</label>
                                <select name="tamanoPagina" class="form-select" onchange="this.form.submit()">
                                    @{
                                        int[] opciones = { 10, 25, 50, 75, 100 };
                                        foreach (var cantidad in opciones)
                                        {
                                            <option value="@cantidad" selected="@(Model.PedidosPaginados.RegistrosPorPagina == cantidad ? "selected" : null)">
                                                @cantidad registros
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="campoBusqueda" class="form-label fw-semibold">
                                    <i class="bi bi-search me-1"></i>Buscar
                                </label>
                                <input type="text" name="busqueda" class="form-control" placeholder="ID pedido o cliente...">
                            </div>
                            <div class="col-md-2">
                                <label for="filtroEstado" class="form-label fw-semibold">
                                    <i class="bi bi-funnel me-1"></i>Estado
                                </label>
                                <select name="estado" class="form-select">
                                    <option value="">Todos</option>
                                    <option value="0" selected="@(Model.Estado == EstadoPedido.Pendiente ? "selected" : null)">Pendiente</option>
                                    <option value="1" selected="@(Model.Estado == EstadoPedido.Enviado ? "selected" : null)">Enviado</option>
                                    <option value="2" selected="@(Model.Estado == EstadoPedido.Entregado ? "selected" : null)">Entregado</option>
                                    <option value="3" selected="@(Model.Estado == EstadoPedido.Cancelado ? "selected" : null)">Cancelado</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold"><i class="bi bi-calendar me-1"></i>Desde</label>
                                <input type="date" name="fechaDesde" value="@Model.FechaDesde?.ToString("yyyy-MM-dd")" class="form-control">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold"><i class="bi bi-calendar me-1"></i>Hasta</label>
                                <input type="date" name="fechaHasta" value="@Model.FechaHasta?.ToString("yyyy-MM-dd")" class="form-control">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold"><i class="bi bi-currency-dollar me-1"></i>Monto</label>
                                <select name="filtroMonto" class="form-select">
                                    <option value="">Todos</option>
                                    <option value="bajo" selected='@(Model.FiltroMonto == "bajo" ? "selected" : null)'>Menos de $250.000</option>
                                    <option value="medio" selected='@(Model.FiltroMonto == "medio" ? "selected" : null)'>$250.000 - $1.000.000</option>
                                    <option value="alto" selected='@(Model.FiltroMonto == "alto" ? "selected" : null)'>Más de $1.000.000</option>
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end gap-2">
                                <button type="submit" class="btn btn-primary rounded-3 flex-fill">
                                    <i class="bi bi-filter me-1"></i>Filtrar
                                </button>
                                <a asp-action="Listado" class="btn btn-outline-secondary rounded-3 flex-fill">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Resumen de Resultados -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3 px-1">
        <div class="text-muted small">
            Mostrando <strong>@Model.PedidosPaginados.DesdeRegistro</strong> a <strong>@Model.PedidosPaginados.HastaRegistro</strong>
            de <strong>@Model.PedidosPaginados.TotalRegistros</strong> pedidos
        </div>
        <div class="text-muted small">
            Suma total de la página: <span class="fw-bold">@Model.PedidosPaginados.Items.Sum(x => x.Total).ToString("C0")</span>
        </div>
    </div>

    <!-- Tabla de Pedidos -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="border-bottom">
                                <tr>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-hash me-2 text-primary"></i>ID Pedido
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person me-2 text-primary"></i>Cliente
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-calendar me-2 text-primary"></i>Fecha Pedido
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-truck me-2 text-primary"></i>Fecha Entrega
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-currency-dollar me-2 text-primary"></i>Total
                                        </div>
                                    </th>
                                    <th class="border-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-flag me-2 text-primary"></i>Estado
                                        </div>
                                    </th>
                                    <th class="border-0 py-3 text-center">
                                        <i class="bi bi-gear me-1 text-primary"></i>Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pedido in Model.PedidosPaginados.Items)
                                {
                                    <tr>
                                        <td class="py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="fw-semibold px-3 py-2 text-uppercase"
                                                     style="font-size: 0.9rem; letter-spacing: 0.5px;">
                                                    #@pedido.PedidoId.ToString("D6")
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div class="cliente-info">
                                                <div class="fw-semibold mb-1">@pedido.NombreCliente</div>
                                                <small class="text-muted">@pedido.EmailCliente</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div>
                                                <div class="fw-semibold mb-1">@pedido.FechaPedido.ToString("dd/MM/yyyy")</div>
                                                <small class="text-muted">@pedido.FechaPedido.ToString("HH:mm")</small>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            @if (pedido.FechaEntrega.HasValue)
                                            {
                                                <div class="fecha-info">
                                                    <div class="fw-semibold">@pedido.FechaEntrega.Value.ToString("dd/MM/yyyy")</div>
                                                    <small class="text-muted">@pedido.FechaEntrega.Value.ToString("HH:mm")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Sin fecha</span>
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="fw-bold text-success">@pedido.Total.ToString("C0")</div>
                                        </td>
                                        <td class="py-3">
                                            @switch (pedido.Estado)
                                            {
                                                case EstadoPedido.Pendiente:
                                                    <span class="badge rounded-2 fw-semibold text-uppercase px-3 py-2 bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25"
                                                          style="font-size: 0.8rem; letter-spacing: 0.5px;">
                                                        <i class="bi bi-clock me-1"></i>Pendiente
                                                    </span>
                                                    break;
                                                case EstadoPedido.Enviado:
                                                    <span class="badge rounded-2 fw-semibold text-uppercase px-3 py-2 bg-info bg-opacity-10 text-info border border-info border-opacity-25"
                                                          style="font-size: 0.8rem; letter-spacing: 0.5px;">
                                                        <i class="bi bi-truck me-1"></i>Enviado
                                                    </span>
                                                    break;
                                                case EstadoPedido.Entregado:
                                                    <span class="badge rounded-2 fw-semibold text-uppercase px-3 py-2 bg-success bg-opacity-10 text-success border border-success border-opacity-25"
                                                          style="font-size: 0.8rem; letter-spacing: 0.5px;">
                                                        <i class="bi bi-check-circle me-1"></i>Entregado
                                                    </span>
                                                    break;
                                                case EstadoPedido.Cancelado:
                                                    <span class="badge rounded-2 fw-semibold text-uppercase px-3 py-2 bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25"
                                                          style="font-size: 0.8rem; letter-spacing: 0.5px;">
                                                        <i class="bi bi-x-circle me-1"></i>Cancelado
                                                    </span>
                                                    break;
                                            }
                                        </td>
                                        <td class="py-3">
                                            <div class="d-flex justify-content-center gap-1">
                                                <a asp-area="" asp-controller="Pedidos" asp-action="Detalles" asp-route-id="@pedido.PedidoId"
                                                   class="btn btn-outline-info btn-sm rounded-2 shadow-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver detalle">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (pedido.Estado == EstadoPedido.Pendiente && esAdmin)
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm rounded-2 shadow-sm"
                                                            onclick="enviarPedido(@pedido.PedidoId)"
                                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Marcar como enviado">
                                                        <i class="bi bi-truck"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-outline-danger btn-sm rounded-2 shadow-sm"
                                                            onclick="cancelarPedido(@pedido.PedidoId)"
                                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Cancelar pedido">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                }
                                                else if (pedido.Estado == EstadoPedido.Enviado)
                                                {
                                                    <button type="button" class="btn btn-outline-success btn-sm rounded-2 shadow-sm"
                                                            onclick="entregarPedido(@pedido.PedidoId)"
                                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Marcar como entregado">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <nav aria-label="Navegación de pedidos" class="mt-3">
        <ul class="pagination justify-content-center justify-content-md-end mb-0">
            @{
                // Variables para que el código no sea eterno
                int actual = Model.PedidosPaginados.PaginaActual;
                int total = Model.PedidosPaginados.TotalPaginas;
                int radio = 2;
            }

            @* Botón Anterior *@
            <li class="page-item @(actual == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-area="Admin" asp-controller="Pedidos" asp-action="Listado"
                   asp-route-pagina="@(actual - 1)"
                   asp-route-tamanoPagina="@Model.PedidosPaginados.RegistrosPorPagina"
                   asp-route-busqueda="@Model.Busqueda"
                   asp-route-estado="@Model.Estado"
                   asp-route-filtroMonto="@Model.FiltroMonto"
                   asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
                   asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @* Lógica de Números con Truncado *@
            @for (int i = 1; i <= total; i++)
            {
                // Mostramos: primera, última, y las que están cerca de la actual (radio 2)
                if (i == 1 || i == total || (i >= actual - radio && i <= actual + radio))
                {
                    <li class="page-item @(i == actual ? "active" : "")">
                        <a class="page-link"
                           asp-area="Admin" asp-controller="Pedidos" asp-action="Listado"
                           asp-route-pagina="@i"
                           asp-route-tamanoPagina="@Model.PedidosPaginados.RegistrosPorPagina"
                           asp-route-busqueda="@Model.Busqueda"
                           asp-route-estado="@Model.Estado"
                           asp-route-filtroMonto="@Model.FiltroMonto"
                           asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
                           asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")">
                            @i
                        </a>
                    </li>
                }
                // Puntos suspensivos
                else if (i == actual - radio - 1 || i == actual + radio + 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @* Botón Siguiente *@
            <li class="page-item @(actual == total ? "disabled" : "")">
                <a class="page-link"
                   asp-area="Admin" asp-controller="Pedidos" asp-action="Listado"
                   asp-route-pagina="@(actual + 1)"
                   asp-route-tamanoPagina="@Model.PedidosPaginados.RegistrosPorPagina"
                   asp-route-busqueda="@Model.Busqueda"
                   asp-route-estado="@Model.Estado"
                   asp-route-filtroMonto="@Model.FiltroMonto"
                   asp-route-fechaDesde="@Model.FechaDesde?.ToString("yyyy-MM-dd")"
                   asp-route-fechaHasta="@Model.FechaHasta?.ToString("yyyy-MM-dd")">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>

<!-- Modal de Cambio de Estado -->
<partial name="_ModalCambiarEstado" />

<!-- Formularios Ocultos -->
<div style="display: none;">
    @foreach (var pedido in Model.PedidosPaginados.Items)
    {
        <form id="enviarPedido@(pedido.PedidoId)" asp-area="Admin" asp-controller="Pedidos" asp-action="Enviar" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
        </form>

        <form id="entregarPedido@(pedido.PedidoId)" asp-area="Admin" asp-controller="Pedidos" asp-action="Entregar" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
        </form>

        <form id="cancelarPedido@(pedido.PedidoId)" asp-area="Admin" asp-controller="Pedidos" asp-action="Cancelar" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
        </form>
    }
</div>

@section Scripts{
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Inicializar tooltips
            var listaTooltips = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltips = listaTooltips.map((elementoTooltip) => new bootstrap.Tooltip(elementoTooltip))
        })

        function enviarPedido(pedidoId) {
            const modal = new bootstrap.Modal(document.getElementById("modalCambioEstado"));
            const mensajeCambioEstado = document.getElementById("mensajeCambioEstado");
            const botonDerecho = document.getElementById("botonDerecho");
            const iconoEstado = document.getElementById("iconoEstado");
            mensajeCambioEstado.textContent = `¿Confirmas que el pedido #${pedidoId.toString().padStart(6, "0")} ha sido enviado?`;
            iconoEstado.className = "bi bi-truck text-info display-4";
            botonDerecho.className = "btn btn-info";
            botonDerecho.textContent = "Marcar como Enviado";
            botonDerecho.onclick = () => {
                // Mostrar loading
                botonDerecho.innerHTML = '<i class="bi bi-arrow-repeat spin me-2"></i>Procesando...'
                botonDerecho.disabled = true

                // Enviar formulario
                document.getElementById(`enviarPedido${pedidoId}`).submit()
            }

            modal.show()
        }

        function entregarPedido(pedidoId) {
            const modal = new bootstrap.Modal(document.getElementById("modalCambioEstado"));
            const mensajeCambioEstado = document.getElementById("mensajeCambioEstado");
            const botonDerecho = document.getElementById("botonDerecho");
            const iconoEstado = document.getElementById("iconoEstado");
            mensajeCambioEstado.textContent = `¿Confirmas que el pedido #${pedidoId.toString().padStart(6, "0")} ha sido entregado?`;
            iconoEstado.className = "bi bi-check-circle text-success display-4";
            botonDerecho.className = "btn btn-success";
            botonDerecho.textContent = "Marcar como Entregado";
            botonDerecho.onclick = () => {
                // Mostrar loading
                botonDerecho.innerHTML = '<i class="bi bi-arrow-repeat spin me-2"></i>Procesando...'
                botonDerecho.disabled = true

                // Enviar formulario
                document.getElementById(`entregarPedido${pedidoId}`).submit()
            }

            modal.show()
        }

        function cancelarPedido(pedidoId) {
            const modal = new bootstrap.Modal(document.getElementById("modalCambioEstado"));
            const mensajeCambioEstado = document.getElementById("mensajeCambioEstado");
            const botonDerecho = document.getElementById("botonDerecho");
            const iconoEstado = document.getElementById("iconoEstado");
            mensajeCambioEstado.textContent = `¿Estás seguro de cancelar el pedido #${pedidoId.toString().padStart(6, "0")}?`;
            iconoEstado.className = "bi bi-x-circle text-danger display-4";
            botonDerecho.className = "btn btn-danger";
            botonDerecho.textContent = "Cancelar Pedido";
            botonDerecho.onclick = () => {
                // Mostrar loading
                botonDerecho.innerHTML = '<i class="bi bi-arrow-repeat spin me-2"></i>Procesando...'
                botonDerecho.disabled = true

                // Enviar formulario
                document.getElementById(`cancelarPedido${pedidoId}`).submit()
            }

            modal.show()
        }
    </script>
}
