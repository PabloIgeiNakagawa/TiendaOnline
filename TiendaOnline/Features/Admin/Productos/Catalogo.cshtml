@using TiendaOnline.Features.Admin.Productos
@model ProductoCatalogoViewModel

<div class="container-fluid py-4">
    <!-- Sección de Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-md-flex justify-content-md-between align-items-md-center">
                <div>
                    <h2 class="mb-1 fw-bold">
                        <i class="bi bi-box-seam me-2 text-primary"></i>
                        Catálogo
                    </h2>
                    <p class="text-muted mb-0">Administra los productos del sistema</p>
                </div>
                <a asp-controller="Productos" asp-action="AgregarProducto" class="btn btn-primary btn-lg shadow-sm rounded-3 mt-3 mt-md-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        Nuevo Producto
                    </a>
                </div>
            </div>
        </div>

    <!-- Filtros -->
    <form method="get" asp-action="Catalogo">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card rounded-3 shadow-sm border-0">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-1">
                                <label class="form-label fw-bold text-muted small">Ver</label>
                                <select name="tamanoPagina" class="form-select" onchange="this.form.submit()">
                                    @{
                                        int[] opciones = { 10, 25, 50, 75, 100 };
                                        foreach (var cantidad in opciones)
                                        {
                                            <option value="@cantidad" selected="@(Model.ProductosPaginados.RegistrosPorPagina == cantidad ? "selected" : null)">
                                                @cantidad
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label fw-semibold"><i class="bi bi-search me-1"></i>Buscar</label>
                                <input type="text" name="busqueda" value="@Model.Busqueda" class="form-control" placeholder="Nombre o descripción...">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold"><i class="bi bi-funnel me-1"></i>Categoría</label>
                                <select name="categoriaId" class="form-select">
                                    <option value="">Todas</option>
                                    @foreach (var cat in Model.Categorias)
                                    {
                                        <option value="@cat.CategoriaId" selected="@(Model.CategoriaSeleccionada == cat.CategoriaId)">@cat.Nombre</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold"><i class="bi bi-boxes me-1"></i>Stock</label>
                                <select name="stock" class="form-select">
                                    <option value="">Todos</option>
                                    <option value="disponible" selected="@(Model.StockSeleccionado == "disponible")">Con stock</option>
                                    <option value="agotado" selected="@(Model.StockSeleccionado == "agotado")">Sin stock</option>
                                    <option value="bajo" selected="@(Model.StockSeleccionado == "bajo")">Stock bajo (≤5)</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label fw-semibold"><i class="bi bi-toggle-on me-1"></i>Estado</label>
                                <select name="estado" class="form-select">
                                    <option value="">Todos</option>
                                    <option value="activo" selected="@(Model.EstadoSeleccionado == "activo")">Activos</option>
                                    <option value="inactivo" selected="@(Model.EstadoSeleccionado == "inactivo")">Inactivos</option>
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end gap-2">
                                <button type="submit" class="btn btn-primary rounded-3 flex-fill">
                                    <i class="bi bi-filter me-1"></i>
                                </button>
                                <a asp-action="Catalogo" class="btn btn-outline-secondary rounded-3 flex-fill">
                                    <i class="bi bi-arrow-clockwise me-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- Tabla de Productos -->
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3 shadow-sm border-0">
                <div class="card-header border-bottom">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3 px-1">
                        <div class="text-muted small">
                            @if (Model.ProductosPaginados.TotalRegistros > 0)
                            {
                                <span>
                                    Mostrando <strong>@Model.ProductosPaginados.DesdeRegistro</strong> a
                                    <strong>@Model.ProductosPaginados.HastaRegistro</strong> de
                                    <strong>@Model.ProductosPaginados.TotalRegistros</strong> productos
                                </span>
                            }
                            else
                            {
                                <span>
                                    <i class="bi bi-exclamation-circle me-1 text-warning"></i>
                                    No se encontraron resultados.
                                </span>
                            }
                        </div>

                        <div class="d-flex flex-wrap gap-2">
                            @if (!string.IsNullOrEmpty(Model.Busqueda))
                            {
                                <span class="text-muted small">
                                    <i class="bi bi-search me-1 text-primary small"></i>
                                    <span class="d-none d-sm-inline">Búsqueda:</span> "<strong>@Model.Busqueda</strong>"
                                </span>
                            }

                            @if (Model.CategoriaSeleccionada.HasValue)
                            {
                                var catNombre = Model.Categorias.FirstOrDefault(c => c.CategoriaId == Model.CategoriaSeleccionada)?.Nombre;
                                <span class="text-muted small">
                                    <i class="bi bi-tag me-1 text-primary small"></i>
                                    <span class="d-none d-sm-inline">Categoría:</span> <strong>@catNombre</strong>
                                </span>
                            }

                            @if (!string.IsNullOrEmpty(Model.StockSeleccionado))
                            {
                                <span class="text-muted small">
                                    <i class="bi bi-boxes me-1 text-primary small"></i>
                                    <span class="d-none d-sm-inline">Stock:</span> <strong>@Model.StockSeleccionado</strong>
                                </span>
                            }
                            @if (Model.EstadoSeleccionado != null)
                            {
                                <span class="text-muted small">
                                    <i class="bi bi-toggle-on me-1 text-primary small"></i>
                                    <span class="d-none d-sm-inline">Estado:</span> <strong>@Model.EstadoSeleccionado</strong>
                                </span>
                            }
                        </div>
                    </div>
                </div>
