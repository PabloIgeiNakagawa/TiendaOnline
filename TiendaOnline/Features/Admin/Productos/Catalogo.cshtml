                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Paginación -->
    <nav aria-label="Navegación de productos" class="mt-3">
        <ul class="pagination justify-content-center justify-content-md-end mb-0">
            @{
                var paginacion = Model.ProductosPaginados;
                int radio = 2; // Páginas a mostrar alrededor de la actual
                int actual = paginacion.PaginaActual;
                int total = paginacion.TotalPaginas;
            }

            @* Botón Anterior *@
            <li class="page-item @(actual == 1 ? "disabled" : "")">
                <a class="page-link" asp-area="Admin" asp-controller="Productos" asp-action="Catalogo"
                   asp-route-pagina="@(actual - 1)"
                   asp-route-tamanoPagina="@paginacion.RegistrosPorPagina"
                   asp-route-busqueda="@Model.Busqueda"
                   asp-route-categoriaId="@Model.CategoriaSeleccionada"
                   asp-route-stock="@Model.StockSeleccionado"
                   asp-route-estado="@Model.EstadoSeleccionado">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </li>

            @for (int i = 1; i <= total; i++)
            {
                // Lógica de Truncado
                // Mostramos: Primera, Última y el rango alrededor de la actual
                if (i == 1 || i == total || (i >= actual - radio && i <= actual + radio))
                {
                    <li class="page-item @(i == actual ? "active" : "")">
                        <a class="page-link" asp-area="Admin" asp-controller="Productos" asp-action="Catalogo"
                           asp-route-pagina="@i"
                           asp-route-tamanoPagina="@paginacion.RegistrosPorPagina"
                           asp-route-busqueda="@Model.Busqueda"
                           asp-route-categoriaId="@Model.CategoriaSeleccionada"
                           asp-route-stock="@Model.StockSeleccionado"
                           asp-route-estado="@Model.EstadoSeleccionado">
                            @i
                        </a>
                    </li>
                }
                // Si estamos en el límite del radio, ponemos los puntos suspensivos
                else if (i == actual - radio - 1 || i == actual + radio + 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @* Botón Siguiente *@
            <li class="page-item @(actual == total ? "disabled" : "")">
                <a class="page-link" asp-area="Admin" asp-controller="Productos" asp-action="Catalogo"
                   asp-route-pagina="@(actual + 1)"
                   asp-route-tamanoPagina="@paginacion.RegistrosPorPagina"
                   asp-route-busqueda="@Model.Busqueda"
                   asp-route-categoriaId="@Model.CategoriaSeleccionada"
                   asp-route-stock="@Model.StockSeleccionado"
                   asp-route-estado="@Model.EstadoSeleccionado">
                    <i class="bi bi-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>

