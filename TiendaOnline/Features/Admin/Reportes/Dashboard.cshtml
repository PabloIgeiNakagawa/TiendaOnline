@using TiendaOnline.Features.Admin.Reportes
@model DashboardViewModel
@section Styles{
    <style>
        @@media print {
            .btn, .card-header button {
                display: none !important;
            }

            .card {
                break-inside: avoid;
            }
        }
    </style>
}
<!-- Header del Dashboard -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="h3 mb-1 fw-bold">
                    <i class="bi bi-speedometer2 text-primary me-2"></i>Dashboards
                </h1>
                <p class="text-muted mb-0">
                    <i class="bi bi-calendar-check me-1"></i>
                    Última actualización: <span id="ultimaActualizacion">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                </p>
            </div>
            <div>
                <button class="btn btn-outline-secondary" onclick="window.print()">
                    <i class="bi bi-printer me-1"></i>Imprimir
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Tarjetas de Métricas Principales -->
<div class="row g-3 mb-4">
    <!-- Ventas Totales -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted mb-1 small">Ventas del Mes</p>
                        <h3 class="mb-0 fw-bold">@Model.MetricasGenerales.VentasMesActual.ToString("C", new System.Globalization.CultureInfo("es-CO"))</h3>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-3 p-3">
                        <i class="bi bi-cash-coin text-success fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model.MetricasGenerales.PorcentajeCambioVentas >= 0)
                    {
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up"></i> @Model.MetricasGenerales.PorcentajeCambioVentas.ToString("F1")%
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-arrow-down"></i> @Math.Abs(Model.MetricasGenerales.PorcentajeCambioVentas).ToString("F1")%
                        </span>
                    }
                    <small class="text-muted ms-2">vs mes anterior</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Pedidos -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted mb-1 small">Pedidos del Mes</p>
                        <h3 class="mb-0 fw-bold">@Model.MetricasGenerales.PedidosMesActual</h3>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                        <i class="bi bi-cart-check text-primary fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model.MetricasGenerales.PorcentajeCambioPedidos >= 0)
                    {
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up"></i> @Model.MetricasGenerales.PorcentajeCambioPedidos.ToString("F1")%
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-arrow-down"></i> @Math.Abs(Model.MetricasGenerales.PorcentajeCambioPedidos).ToString("F1")%
                        </span>
                    }
                    <small class="text-muted ms-2">vs mes anterior</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Clientes -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted mb-1 small">Nuevos Clientes</p>
                        <h3 class="mb-0 fw-bold">@Model.MetricasGenerales.ClientesMesActual</h3>
                    </div>
                    <div class="bg-info bg-opacity-10 rounded-3 p-3">
                        <i class="bi bi-people text-info fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model.MetricasGenerales.PorcentajeCambioClientes >= 0)
                    {
                        <span class="badge bg-success bg-opacity-10 text-success">
                            <i class="bi bi-arrow-up"></i> @Model.MetricasGenerales.PorcentajeCambioClientes.ToString("F1")%
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger bg-opacity-10 text-danger">
                            <i class="bi bi-arrow-down"></i> @Math.Abs(Model.MetricasGenerales.PorcentajeCambioClientes).ToString("F1")%
                        </span>
                    }
                    <small class="text-muted ms-2">vs mes anterior</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos Bajo Stock -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted mb-1 small">Productos Bajo Stock</p>
                        <h3 class="mb-0 fw-bold">@Model.MetricasGenerales.ProductosBajoStock</h3>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                        <i class="bi bi-exclamation-triangle text-warning fs-4"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <span class="badge bg-warning bg-opacity-10 text-warning">
                        <i class="bi bi-box"></i> Requiere atención
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Gráficos Principales -->
<div class="row g-3 mb-4">
    <!-- Gráfico de Ventas por Mes -->
    <div class="col-12 col-lg-8">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pt-4 pb-0">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-graph-up text-primary me-2"></i>
                    Ventas de los Últimos 12 Meses
                </h5>
            </div>
            <div class="card-body">
                <canvas id="graficoVentasMensuales" style="max-height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Gráfico de Estados de Pedidos -->
    <div class="col-12 col-lg-4">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pt-4 pb-0">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-pie-chart text-primary me-2"></i>
                    Estado de Pedidos
                </h5>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <canvas id="graficoEstadosPedidos" style="max-height: 250px;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Ventas por Categoría y Top Productos -->
<div class="row g-3 mb-4">
    <!-- Ventas por Categoría -->
    <div class="col-12 col-lg-6">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pt-4 pb-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-tag text-primary me-2"></i>
                    Ventas por Categoría
                </h5>
            </div>
            <div class="card-body">
                @if (Model.VentasPorCategoria.Any())
                {
                    @foreach (var categoria in Model.VentasPorCategoria.Take(5))
                    {
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="fw-medium">@categoria.Categoria</span>
                                <span class="text-muted small">@categoria.TotalVentas.ToString("C", new System.Globalization.CultureInfo("es-CO"))</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: @categoria.PorcentajeDelTotal%"></div>
                            </div>
                            <small class="text-muted">@categoria.CantidadProductos productos vendidos (@categoria.PorcentajeDelTotal%)</small>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center py-4">No hay datos disponibles</p>
                }
            </div>
        </div>
    </div>

    <!-- Top Productos -->
    <div class="col-12 col-lg-6">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pt-4 pb-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-trophy text-primary me-2"></i>
                    Top 5 Productos Más Vendidos
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TopProductos.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var producto in Model.TopProductos.Take(5))
                        {
                            <div class="list-group-item border-0 px-0">
                                <div class="d-flex align-items-center">
                                    <img src="@producto.ImagenUrl" alt="@producto.Nombre"
                                         class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">@producto.Nombre</h6>
                                        <small class="text-muted">@producto.Categoria</small>
                                    </div>
                                    <div class="text-center">
                                        <div class="fw-bold">@producto.CantidadVendida</div>
                                        <small class="text-muted">unidades</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No hay datos disponibles</p>
                }
            </div>
        </div>
    </div>
</div>
<!-- Top Clientes y Productos Bajo Stock -->
<div class="row g-3 mb-4">
    <!-- Top Clientes -->
    <div class="col-12 col-lg-6">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pt-4 pb-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-star text-primary me-2"></i>
                    Top 5 Mejores Clientes
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TopClientes.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Cliente</th>
                                    <th class="text-end">Pedidos</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cliente in Model.TopClientes.Take(5))
                                {
                                    <tr>
                                        <td>
                                            <div>
                                                <div class="fw-medium">@cliente.NombreCompleto</div>
                                                <small class="text-muted">@cliente.Email</small>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-semibold">@cliente.TotalPedidos</span>
                                        </td>
                                        <td class="text-end fw-semibold">
                                            @cliente.TotalGastado.ToString("C", new System.Globalization.CultureInfo("es-CO"))
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No hay datos disponibles</p>
                }
            </div>
        </div>
    </div>

    <!-- Productos Bajo Stock -->
    <div class="col-12 col-lg-6">
        <div class="card bg-body-tertiary border-0 shadow-sm h-100">
            <div class="card-header bg-transparent border-0 pt-4 pb-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>
                    Productos con Bajo Stock
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ProductosBajoStock.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var producto in Model.ProductosBajoStock.Take(5))
                        {
                            <div class="list-group-item border-0 px-0">
                                <div class="d-flex align-items-center">
                                    <img src="@producto.ImagenUrl" alt="@producto.Nombre"
                                         class="rounded me-3" style="width: 45px; height: 45px; object-fit: cover;">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">@producto.Nombre</h6>
                                        <small class="text-muted">@producto.Categoria</small>
                                    </div>
                                    <div class="text-end">
                                        @if (producto.Stock == 0)
                                        {
                                            <span class="badge bg-danger">Agotado</span>
                                        }
                                        else if (producto.Stock <= 3)
                                        {
                                            <span class="badge bg-danger">@producto.Stock unidades</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@producto.Stock unidades</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-success text-center py-4">
                        <i class="bi bi-check-circle fs-3 d-block mb-2"></i>
                        Todos los productos tienen stock suficiente
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Pedidos Recientes -->
<div class="row g-3 mb-4">
    <div class="col-12">
        <div class="card bg-body-tertiary border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pt-4 pb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-clock-history text-primary me-2"></i>
                        Pedidos Recientes
                    </h5>
                    <a asp-area="Admin" asp-controller="Pedidos" asp-action="Listado" class="btn btn-sm btn-outline-primary">
                        Ver todos <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.PedidosRecientes.Any())
                {
                    <!-- Vista Desktop -->
                    <div class="table-responsive d-none d-lg-block">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cliente</th>
                                    <th>Fecha</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pedido in Model.PedidosRecientes)
                                {
                                    <tr>
                                        <td class="fw-medium">#@pedido.PedidoId</td>
                                        <td>@pedido.Cliente</td>
                                        <td>@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="text-end fw-semibold">@pedido.Total.ToString("C", new System.Globalization.CultureInfo("es-CO"))</td>
                                        <td class="text-center">
                                            @switch (pedido.EstadoNumero)
                                            {
                                                case 0:
                                                    <span class="badge bg-warning">@pedido.Estado</span>
                                                    break;
                                                case 1:
                                                    <span class="badge bg-info">@pedido.Estado</span>
                                                    break;
                                                case 2:
                                                    <span class="badge bg-success">@pedido.Estado</span>
                                                    break;
                                                case 3:
                                                    <span class="badge bg-danger">@pedido.Estado</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-controller="Pedidos" asp-action="Detalles" asp-route-id="@pedido.PedidoId"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Vista Mobile -->
                    <div class="d-lg-none">
                        @foreach (var pedido in Model.PedidosRecientes)
                        {
                            <div class="card bg-body-tertiary mb-2 border">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-0">Pedido #@pedido.PedidoId</h6>
                                            <small class="text-muted">@pedido.Cliente</small>
                                        </div>
                                        @switch (pedido.EstadoNumero)
                                        {
                                            case 0:
                                                <span class="badge bg-warning">@pedido.Estado</span>
                                                break;
                                            case 1:
                                                <span class="badge bg-info">@pedido.Estado</span>
                                                break;
                                            case 2:
                                                <span class="badge bg-success">@pedido.Estado</span>
                                                break;
                                            case 3:
                                                <span class="badge bg-danger">@pedido.Estado</span>
                                                break;
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-end">
                                        <div>
                                            <small class="text-muted d-block">@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</small>
                                            <div class="fw-bold text-primary">@pedido.Total.ToString("C", new System.Globalization.CultureInfo("es-CO"))</div>
                                        </div>
                                        <a asp-area="" asp-controller="Pedidos" asp-action="Detalles" asp-route-id="@pedido.PedidoId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No hay pedidos recientes</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
                // Configuración global de Chart.js
        Chart.defaults.font.family = '-apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif';
        Chart.defaults.color = '#6c757d';

        // Datos del servidor
        const datosVentasMensuales = @Html.Raw(Json.Serialize(Model.VentasPorMes));
        const datosEstadosPedidos = @Html.Raw(Json.Serialize(Model.EstadisticasPedidos));

        // Gráfico de Ventas Mensuales
        const ctxVentas = document.getElementById('graficoVentasMensuales').getContext('2d');
        new Chart(ctxVentas, {
            type: 'line',
            data: {
                labels: datosVentasMensuales.map(v => v.nombreMes),
                datasets: [{
                    label: 'Ventas',
                    data: datosVentasMensuales.map(v => v.totalVentas),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointRadius: 4,
                    pointHoverRadius: 6,
                    pointBackgroundColor: '#0d6efd',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 13 },
                        callbacks: {
                            label: function (context) {
                                return ' Ventas: $' + context.parsed.y.toLocaleString('es-AR', {
                                    minimumFractionDigits: 0,
                                    maximumFractionDigits: 0
                                });
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function (value) {
                                return '$' + value.toLocaleString('es-CO', {
                                    minimumFractionDigits: 0,
                                    maximumFractionDigits: 0
                                });
                            }
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Gráfico de Estados de Pedidos
        const ctxEstados = document.getElementById('graficoEstadosPedidos').getContext('2d');
        new Chart(ctxEstados, {
            type: 'doughnut',
            data: {
                labels: [' Pendientes', ' Enviados', ' Entregados', ' Cancelados'],
                datasets: [{
                    data: [
                        datosEstadosPedidos.totalPendientes,
                        datosEstadosPedidos.totalEnviados,
                        datosEstadosPedidos.totalEntregados,
                        datosEstadosPedidos.totalCancelados
                    ],
                    backgroundColor: [
                        '#ffc107',
                        '#0dcaf0',
                        '#198754',
                        '#dc3545'
                    ],
                    borderWidth: 1,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            usePointStyle: true,
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        callbacks: {
                            label: function (context) {
                                const label = context.label || '';
                                const value = context.parsed || 0;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((value / total) * 100).toFixed(1);
                                return label + ': ' + value + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });


        // Actualizar fecha y hora cada minuto
        setInterval(() => {
            const fecha = new Date();
            const opciones = {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            document.getElementById('ultimaActualizacion').textContent =
                fecha.toLocaleString('es-AR', opciones);
        }, 60000);
    </script>
}